# Ez2Fix Website Environment Variables
# Copy this file to .env and fill in your actual values

# reCAPTCHA Configuration (Required for form protection)
# Get your keys from: https://www.google.com/recaptcha/admin
PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Email Service Configuration (Required for lead notifications)
# Sign up at: https://resend.com
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com
TO_EMAIL=your-business-email@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Business Information
BUSINESS_NAME="Ez2Fix Garage Door Service"
BUSINESS_PHONE="(201) 554-6769"
BUSINESS_EMAIL="info@ez2fix.com"
BUSINESS_ADDRESS="Bergen County, NJ"
BUSINESS_WEBSITE="https://ez2fixllc.com"
BUSINESS_LAT="40.9176"
BUSINESS_LNG="-74.0732"

# Service Area Configuration
SERVICE_RADIUS_MILES="25"
PRIMARY_SERVICE_AREAS="Fair Lawn,Elmwood Park,Garfield,Lodi,Saddle Brook,Wallington,Wood-Ridge"

# Google Maps Integration (Required for /service-areas page)
# CLIENT-SIDE KEY: For Maps JavaScript API (visible in browser)
# - Restrict to HTTP referrers: https://ez2fixllc.com/*, https://*.vercel.app/*
# - Enable: Maps JavaScript API, Places API
PUBLIC_GOOGLE_MAPS_API_KEY=your_client_side_google_maps_api_key

# SERVER-SIDE KEY: For Static Maps API (server-only, secure)
# - Optionally restrict by IP addresses
# - Enable: Maps Static API, Geocoding API
GOOGLE_MAPS_API_KEY=your_server_side_google_maps_api_key

# Analytics (Optional)
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
PUBLIC_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Site Configuration
SITE_URL=https://ez2fixllc.com

# Security Configuration (Optional - defaults provided)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
FORM_RATE_LIMIT_MAX=5
FORM_RATE_LIMIT_WINDOW_MS=300000

# External Integrations (Optional)
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DATABASE_URL=

# Twilio SMS Integration (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# CRM Integration (Optional)
CRM_API_KEY=
CRM_ENDPOINT=