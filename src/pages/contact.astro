---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderClean from '@/components/layout/HeaderClean.astro';
import FooterClean from '@/components/layout/FooterClean.astro';
import BookingFormClean from '@/components/ui/BookingFormClean.astro';
import ProfessionalContactForm from '@/components/ui/ProfessionalContactForm.astro';
import ServiceAreaMap from '@/components/sections/ServiceAreaMap.astro';
import Card from '@/components/ui/Card.astro';
import { siteConfig } from '@/config/site';
---

<BaseLayout 
  title="Contact Ez2Fix - Professional Garage Door Service New Jersey | Licensed Contractor"
  description="Contact Ez2Fix for professional garage door service in NJ. Licensed contractor #13VH13553300. Complete service across 5 counties. Get expert consultation."
  keywords="garage door company contact, garage door service New Jersey, professional garage door contractor, contact ez2fix, garage door repair contact nj, licensed garage door contractor nj, garage door service phone number"
>
  <Fragment slot="head">
    <!-- Contact Page Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "@id": "https://ez2fixllc.com/contact#contact",
      "name": "Contact Ez2Fix Garage Door Services",
      "description": "Contact Ez2Fix for professional garage door repair and installation services in Bergen County, NJ.",
      "mainEntity": {
        "@type": "LocalBusiness",
        "name": "Ez2Fix Garage Door Services",
        "telephone": "(201) 554-6769",
        "email": "ez2fixllc@gmail.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Mobile Service - Serving All New Jersey",
          "addressLocality": "Elmwood Park",
          "addressRegion": "NJ",
          "postalCode": "07407",
          "addressCountry": "US"
        },
        "contactPoint": [
          {
            "@type": "ContactPoint",
            "telephone": "+12015546769",
            "contactType": "customer service",
            "availableLanguage": "English",
            "areaServed": [
              "Bergen County, NJ",
              "Hudson County, NJ", 
              "Passaic County, NJ",
              "Essex County, NJ",
              "Morris County, NJ"
            ]
          },
          {
            "@type": "ContactPoint",
            "telephone": "+12015546769",
            "contactType": "emergency",
            "availableLanguage": "English",
            "hoursAvailable": {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": [
                "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"
              ],
              "opens": "00:00",
              "closes": "23:59"
            }
          }
        ]
      }
    })} />
  </Fragment>
  
  <HeaderClean />
  
  <main id="main-content">
    
    <!-- Hero Section -->
    <section class="py-12 bg-ez2fix-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          
          <!-- Breadcrumb -->
          <nav class="flex items-center space-x-2 text-sm mb-8 text-ez2fix-brown">
            <a href="/" class="hover:text-ez2fix-primary transition-colors">Home</a>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-ez2fix-primary font-semibold">Contact</span>
          </nav>
          
          <!-- Page Title -->
          <div class="text-center">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-ez2fix-dark mb-6">
              Contact Ez2Fix for Professional Garage Door Service
            </h1>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              Ready to contact our garage door company? Professional garage door contractor serving New Jersey with expert consultation and complete service across 5 counties.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Information & Form Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            
            <!-- Contact Information -->
            <div>
              <h2 class="text-2xl md:text-3xl font-bold text-ez2fix-dark mb-8">
                Get in <span class="text-ez2fix-primary">Touch</span>
              </h2>
              
              <div class="space-y-6">
                <!-- Phone -->
                <Card class="p-6 hover:shadow-lg transition-all duration-300 bg-ez2fix-cream border-2 border-ez2fix-primary">
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-ez2fix-primary rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold mb-2 text-ez2fix-dark">Call Us Now</h3>
                      <a href={siteConfig.links.phone} class="text-2xl font-bold text-ez2fix-primary hover:text-ez2fix-gold transition-colors">
                        {siteConfig.business.phone}
                      </a>
                      <p class="text-ez2fix-brown mt-2">Available 24/7 for emergencies</p>
                    </div>
                  </div>
                </Card>
                
                <!-- Email -->
                <Card class="p-6 hover:shadow-lg transition-all duration-300 bg-ez2fix-cream border-2 border-ez2fix-gold">
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-ez2fix-gold rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold mb-2 text-ez2fix-dark">Email Us</h3>
                      <a href={`mailto:${siteConfig.business.email}`} class="text-lg text-ez2fix-primary hover:text-ez2fix-gold transition-colors">
                        {siteConfig.business.email}
                      </a>
                      <p class="text-ez2fix-brown mt-2">We'll respond within 24 hours</p>
                    </div>
                  </div>
                </Card>
                
                <!-- Service Area -->
                <Card class="p-6 hover:shadow-lg transition-all duration-300 bg-ez2fix-cream border-2 border-ez2fix-brown">
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-ez2fix-brown rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold mb-2 text-ez2fix-dark">Service Area Coverage</h3>
                      <p class="text-ez2fix-brown">
                        Professional garage door service New Jersey: Bergen, Hudson, Passaic, Essex, and Morris Counties
                      </p>
                      <p class="text-sm text-ez2fix-brown mt-2">Licensed contractor #13VH13553300</p>
                    </div>
                  </div>
                </Card>
              </div>
            </div>
            
            <!-- Professional Contact Form -->
            <div>
              <ProfessionalContactForm />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Google Maps Service Area Integration -->
    <ServiceAreaMap 
      title="Professional Garage Door Service New Jersey Coverage"
      subtitle="Licensed garage door contractor serving 5 counties with complete garage door company contact and service solutions."
    />

    <!-- Service Hours & Emergency Info -->
    <section class="py-16 md:py-20 gradient-dark">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-cream mb-6">
            Professional Garage Door Contractor <span class="text-ez2fix-primary">Service Hours</span>
          </h2>
          <p class="text-lg text-ez2fix-gold mb-8">
            Licensed garage door service New Jersey with flexible scheduling and 24/7 emergency response across 5 counties.
          </p>
          
          <!-- Professional Credentials Banner -->
          <div class="bg-ez2fix-primary/20 border-2 border-ez2fix-primary rounded-lg p-6 mb-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
              <div>
                <p class="text-ez2fix-cream font-bold text-lg">Licensed Contractor</p>
                <p class="text-ez2fix-gold text-sm">#13VH13553300</p>
              </div>
              <div>
                <p class="text-ez2fix-cream font-bold text-lg">Quality Standards</p>
                <p class="text-ez2fix-gold text-sm">Full Warranty Protection</p>
              </div>
              <div>
                <p class="text-ez2fix-cream font-bold text-lg">Professional Service</p>
                <p class="text-ez2fix-gold text-sm">5 Counties Coverage</p>
              </div>
            </div>
          </div>
          
          <div class="max-w-2xl mx-auto">
            <!-- 24/7 Service -->
            <Card class="p-12 bg-ez2fix-cream border-2 border-ez2fix-primary text-center">
              <div class="w-24 h-24 bg-ez2fix-primary rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-2xl md:text-3xl font-bold text-ez2fix-dark mb-6">24/7 Professional Service</h3>
              <div class="text-ez2fix-brown space-y-4">
                <p class="text-xl font-semibold text-ez2fix-primary">Available Around the Clock</p>
                <p class="text-lg">No regular hours - we're here whenever you need garage door service. Day or night, weekends and holidays.</p>
                <div class="bg-ez2fix-primary/10 border border-ez2fix-primary rounded-lg p-4 mt-6">
                  <p class="font-semibold text-ez2fix-dark">Emergency or Scheduled Service</p>
                  <p class="text-sm text-ez2fix-brown mt-1">Garage door stuck? Spring broken? Need routine maintenance? We handle it all, anytime.</p>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <FooterClean />
</BaseLayout>