    console.log('🔄 Loading Google Maps with secure API key from endpoint...');
    
    try {
      const apiKey = await getSecureApiKey();
      if (apiKey) {
        console.log('✅ Secure API key retrieved, loading Google Maps...');
        loadMapsScript(apiKey);
      } else {
        throw new Error('Failed to retrieve API key');
      }
    } catch (error) {
      console.error('❌ Google Maps loading failed:', error);
      showMapError();
    }
  }

  function loadMapsScript(apiKey) {
    const script = document.createElement('script');
    script.async = true;
    script.defer = true;
    script.src = `https://maps.googleapis.com/maps/api/js?key=${apiKey}&callback=initServiceAreasMap&loading=async`;
