---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderClean from '@/components/layout/HeaderClean.astro';
import FooterClean from '@/components/layout/FooterClean.astro';
import Card from '@/components/ui/Card.astro';
import { siteConfig } from '@/config/site';

// Company statistics and credentials
const companyStats = {
  yearsExperience: '10+',
  customersServed: '10,000+',
  licenseNumber: '#13VH13553300',
  satisfaction: '99.7%',
  warranty: '10-Year',
  responseTime: '45 minutes'
};


// Why choose Ez2Fix points
const whyChoosePoints = [
  {
    icon: "shield",
    title: "Licensed & Insured",
    description: "Fully licensed contractor (#13VH13553300) with comprehensive insurance protection for your peace of mind."
  },
  {
    icon: "clock",
    title: "Fast Response Times",
    description: "Average 45-minute response time across Bergen County. When your garage door breaks, we're already on our way."
  },
  {
    icon: "tools",
    title: "Professional Equipment",
    description: "State-of-the-art tools and diagnostic equipment to handle any garage door problem efficiently and safely."
  },
  {
    icon: "warranty",
    title: "Industry-Leading Warranties",
    description: "10-year warranties on parts and installations. We stand behind our work with real guarantees."
  },
  {
    icon: "pricing",
    title: "Transparent Pricing",
    description: "Honest, upfront pricing with no hidden fees. You'll know exactly what you're paying before we start."
  },
  {
    icon: "quality",
    title: "Premium Parts Only",
    description: "We use only the highest quality parts from trusted manufacturers to ensure lasting repairs and installations."
  }
];

// Service area coverage
const serviceAreas = [
  { name: "Bergen County", highlight: true },
  { name: "Hudson County", highlight: false },
  { name: "Passaic County", highlight: false },
  { name: "Essex County", highlight: false },
  { name: "Morris County", highlight: false }
];
---

<BaseLayout 
  title="About Ez2Fix | Licensed Garage Door Contractor New Jersey | Our Story"
  description="Learn about Ez2Fix LLC, New Jersey's trusted garage door contractor. Licensed #13VH13553300, serving 12,000+ families across 5 counties with professional service."
  keywords="garage door company New Jersey, licensed garage door contractor, professional garage door service, Ez2Fix garage door contractor, New Jersey garage door company, garage door service NJ, licensed contractor New Jersey"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "AboutPage",
      "@id": "https://ez2fixllc.com/about#about",
      "name": "About Ez2Fix Garage Door Services",
      "description": "Learn about Ez2Fix, Bergen County's most trusted garage door professionals.",
      "mainEntity": {
        "@type": "LocalBusiness",
        "name": "Ez2Fix Garage Door Services",
        "description": "Professional garage door repair and installation company serving Bergen County and surrounding areas in Northern New Jersey.",
        "hasCredential": {
          "@type": "EducationalOccupationalCredential", 
          "credentialCategory": "Professional License #13VH13553300"
        },
        "yearsOfOperation": "10+",
        "serviceArea": ["Bergen County, NJ", "Hudson County, NJ", "Passaic County, NJ", "Essex County, NJ", "Morris County, NJ"]
      }
    })} />
  </Fragment>
  
  <HeaderClean />
  
  <main>
    <!-- Hero Section -->
    <section class="py-12 bg-ez2fix-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          
          <!-- Breadcrumb -->
          <nav class="flex items-center space-x-2 text-sm mb-8 text-ez2fix-brown">
            <a href="/" class="hover:text-ez2fix-primary transition-colors">Home</a>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-ez2fix-primary font-semibold">About Ez2Fix</span>
          </nav>
          
          <!-- Page Title -->
          <div class="text-center">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-ez2fix-dark mb-6">
              About Ez2Fix - Licensed Garage Door Contractor New Jersey
            </h1>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              New Jersey's trusted garage door company serving 12,000+ families across 5 counties since 2014. Professional garage door service with licensed contractors, honest pricing, and genuine care.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Story Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-6">
              Our <span class="text-ez2fix-primary">Story</span>
            </h2>
          </div>

          <div class="prose prose-lg max-w-none text-ez2fix-brown">
            <p class="text-xl leading-relaxed mb-8">
              Ez2Fix LLC was founded in 2014 with a simple mission: provide New Jersey families with honest, professional garage door service they can trust. As a licensed garage door contractor serving 5 counties, what started as a commitment to excellence has grown into New Jersey's most trusted garage door company with over 12,000+ satisfied customers.
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
              <Card class="p-6 bg-ez2fix-cream border-2 border-ez2fix-primary">
                <h3 class="text-xl font-bold text-ez2fix-dark mb-3">Licensed Garage Door Contractor</h3>
                <p class="text-ez2fix-brown">
                  Professional garage door service backed by New Jersey contractor license <span class="font-bold text-ez2fix-primary">{companyStats.licenseNumber}</span> with comprehensive insurance coverage. Every technician is trained, certified, and committed to safety standards.
                </p>
              </Card>
              
              <Card class="p-6 bg-ez2fix-cream border-2 border-ez2fix-gold">
                <h3 class="text-xl font-bold text-ez2fix-dark mb-3">New Jersey Community Focused</h3>
                <p class="text-ez2fix-brown">
                  As a garage door company New Jersey families trust, we live and work in the communities we serve across 5 counties. Your neighbors are our neighbors, and we take pride in serving the communities we call home.
                </p>
              </Card>
            </div>
            
            <p class="text-lg leading-relaxed mb-8">
              Over {companyStats.yearsExperience} years as a licensed garage door contractor, we've built lasting relationships with over 12,000+ families across New Jersey's 5 counties. Our professional garage door service approach is simple: listen to your needs, provide honest recommendations, and deliver quality work that stands the test of time. This is what sets our garage door company New Jersey apart from the rest.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Values Section -->
    <section class="py-16 md:py-24 gradient-dark">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-cream mb-6">
            Our <span class="text-ez2fix-primary">Values</span>
          </h2>
          <p class="text-lg text-ez2fix-gold max-w-3xl mx-auto">
            These principles guide every interaction, every repair, and every installation our professional garage door service team performs across New Jersey's 5 counties.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {whyChoosePoints.map((point, index) => (
            <Card class="p-8 text-center hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 bg-ez2fix-cream border-2 border-ez2fix-primary group h-full flex flex-col">
              <div class="w-16 h-16 rounded-full bg-ez2fix-primary mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                {point.icon === 'shield' && (
                  <svg class="w-8 h-8 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                )}
                {point.icon === 'clock' && (
                  <svg class="w-8 h-8 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {point.icon === 'tools' && (
                  <svg class="w-8 h-8 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                )}
                {point.icon === 'warranty' && (
                  <svg class="w-8 h-8 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                  </svg>
                )}
                {point.icon === 'pricing' && (
                  <svg class="w-8 h-8 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                  </svg>
                )}
                {point.icon === 'quality' && (
                  <svg class="w-8 h-8 text-ez2fix-dark" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold text-ez2fix-dark mb-4">{point.title}</h3>
              <p class="text-ez2fix-brown leading-relaxed flex-1">{point.description}</p>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Our Approach Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-6">
              Our <span class="text-ez2fix-primary">Approach</span>
            </h2>
            <p class="text-lg text-ez2fix-brown">
              Every service call follows our proven process designed to deliver exceptional results and complete customer satisfaction.
            </p>
          </div>

          <div class="space-y-8">
            <Card class="p-8 bg-ez2fix-cream border-2 border-ez2fix-primary">
              <div class="flex items-start space-x-6">
                <div class="w-12 h-12 rounded-full bg-ez2fix-primary flex items-center justify-center flex-shrink-0">
                  <span class="text-xl font-bold text-ez2fix-dark">1</span>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-ez2fix-dark mb-3">Listen & Assess</h3>
                  <p class="text-ez2fix-brown leading-relaxed">
                    We start by understanding your specific situation and concerns. Our technicians conduct thorough assessments to identify the root cause, not just the symptoms.
                  </p>
                </div>
              </div>
            </Card>
            
            <Card class="p-8 bg-ez2fix-cream border-2 border-ez2fix-gold">
              <div class="flex items-start space-x-6">
                <div class="w-12 h-12 rounded-full bg-ez2fix-gold flex items-center justify-center flex-shrink-0">
                  <span class="text-xl font-bold text-ez2fix-dark">2</span>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-ez2fix-dark mb-3">Honest Recommendations</h3>
                  <p class="text-ez2fix-brown leading-relaxed">
                    We provide clear, honest recommendations with transparent pricing. No pressure tactics, no unnecessary upsells – just the solutions you actually need.
                  </p>
                </div>
              </div>
            </Card>
            
            <Card class="p-8 bg-ez2fix-cream border-2 border-ez2fix-primary">
              <div class="flex items-start space-x-6">
                <div class="w-12 h-12 rounded-full bg-ez2fix-primary flex items-center justify-center flex-shrink-0">
                  <span class="text-xl font-bold text-ez2fix-dark">3</span>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-ez2fix-dark mb-3">Quality Execution</h3>
                  <p class="text-ez2fix-brown leading-relaxed">
                    Using premium parts and professional techniques, we complete every job to the highest standards. Safety protocols are never compromised.
                  </p>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </section>

    <!-- Credentials & Experience Section -->
    <section class="py-16 md:py-24 bg-ez2fix-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-6">
              Licensed Garage Door Contractor <span class="text-ez2fix-primary">Credentials</span>
            </h2>
            <p class="text-lg text-ez2fix-brown">
              Professional qualifications and certifications that give you confidence in choosing our garage door company New Jersey for all your service needs.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            
            <!-- License & Insurance -->
            <Card class="p-8 bg-white border-2 border-ez2fix-primary h-full">
              <div class="flex items-start space-x-4 mb-6">
                <div class="w-12 h-12 rounded-full bg-ez2fix-primary flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-ez2fix-dark mb-3">Licensed Garage Door Contractor</h3>
                  <p class="text-ez2fix-brown leading-relaxed">
                    New Jersey State Licensed Contractor <span class="font-bold text-ez2fix-primary">{companyStats.licenseNumber}</span> with comprehensive liability and workers' compensation insurance coverage. Professional garage door service backed by full licensing, bonding, and industry certifications.
                  </p>
                </div>
              </div>
            </Card>
            
            <!-- Experience -->
            <Card class="p-8 bg-white border-2 border-ez2fix-gold h-full">
              <div class="flex items-start space-x-4 mb-6">
                <div class="w-12 h-12 rounded-full bg-ez2fix-gold flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-ez2fix-dark mb-3">{companyStats.yearsExperience} Years Professional Service</h3>
                  <p class="text-ez2fix-brown leading-relaxed">
                    Over a decade as a professional garage door service provider serving New Jersey families with 12,000+ successful service calls and {companyStats.satisfaction} customer satisfaction rate across 5 counties.
                  </p>
                </div>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas Section -->
    <section class="py-16 md:py-24 gradient-dark">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-cream mb-6">
            New Jersey <span class="text-ez2fix-primary">Service Areas</span>
          </h2>
          <p class="text-lg text-ez2fix-gold mb-12">
            Our licensed garage door contractor team proudly serves 5 counties across Northern New Jersey with complete professional garage door service coverage.
          </p>
          
          <!-- Service Areas Grid -->
          <div class="grid grid-cols-2 md:grid-cols-5 gap-4 max-w-4xl mx-auto">
            {serviceAreas.map((area, index) => (
              <div class={`p-4 rounded-lg text-center ${area.highlight ? 'bg-ez2fix-primary text-white' : 'bg-ez2fix-cream text-ez2fix-dark border-2 border-ez2fix-primary/20'}`}>
                <div class={`font-bold ${area.highlight ? 'text-white' : 'text-ez2fix-primary'}`}>
                  {area.name}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <FooterClean />
</BaseLayout>