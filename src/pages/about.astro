---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderClean from '@/components/layout/HeaderClean.astro';
import FooterClean from '@/components/layout/FooterClean.astro';
import Card from '@/components/ui/Card.astro';
import { siteConfig } from '@/config/site';

// Core values that build trust
const coreValues = [
  {
    icon: "shield",
    title: "Licensed & Insured",
    description: "NJ State Licensed Contractor #13VH13553300 with comprehensive insurance protection for your complete peace of mind."
  },
  {
    icon: "warranty",
    title: "10-Year Warranties",
    description: "Industry-leading warranties on parts and installations. We stand behind our work with real, enforceable guarantees."
  },
  {
    icon: "quality",
    title: "Premium Parts Only",
    description: "We exclusively use the highest quality parts from trusted manufacturers to ensure lasting repairs and installations."
  },
  {
    icon: "clock",
    title: "Reliable Service",
    description: "Prompt response times and dependable service when you need it most. We understand garage door emergencies can't wait."
  }
];
---

<BaseLayout
  title="About Ez2Fix | Licensed NJ Garage Door Contractor #13VH13553300"
  description="Learn about Ez2Fix LLC, New Jersey's trusted garage door contractor. Licensed #13VH13553300, serving 12,000+ families across 5 counties with professional, reliable service."
  keywords="garage door company New Jersey, licensed garage door contractor, professional garage door service, Ez2Fix, New Jersey garage door company, garage door service NJ, licensed contractor New Jersey"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "AboutPage",
      "@id": "https://ez2fixllc.com/about#about",
      "name": "About Ez2Fix Garage Door Services",
      "description": "Learn about Ez2Fix, New Jersey's reliable garage door professionals.",
      "mainEntity": {
        "@type": "LocalBusiness",
        "name": "Ez2Fix Garage Door Services",
        "description": "Professional garage door repair and installation company serving Northern New Jersey.",
        "hasCredential": {
          "@type": "EducationalOccupationalCredential",
          "credentialCategory": "Professional License #13VH13553300"
        },
        "yearsOfOperation": "10+",
        "serviceArea": ["Bergen County, NJ", "Hudson County, NJ", "Passaic County, NJ", "Essex County, NJ", "Morris County, NJ"]
      }
    })} />
  </Fragment>

  <HeaderClean />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="py-12 bg-ez2fix-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">

          <!-- Breadcrumb -->
          <nav class="flex items-center space-x-2 text-sm mb-8 text-ez2fix-brown">
            <a href="/" class="hover:text-ez2fix-primary transition-colors">Home</a>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-ez2fix-primary font-semibold">About Ez2Fix</span>
          </nav>

          <!-- Page Title -->
          <div class="text-center">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-ez2fix-dark mb-6">
              About Ez2Fix - Licensed Garage Door Contractor
            </h1>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              New Jersey's trusted garage door company serving 12,000+ families across 5 counties since 2014. Licensed, insured, and committed to quality service.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Story & Credentials Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-6">
              Our <span class="text-ez2fix-primary">Story</span>
            </h2>
          </div>

          <div class="prose prose-lg max-w-none">
            <p class="text-xl leading-relaxed mb-10 text-ez2fix-brown">
              Ez2Fix LLC was founded in 2014 with a straightforward mission: provide New Jersey families with honest, professional garage door service they can trust. What started as a commitment to doing the right thing has grown into a company serving hundreds of satisfied customers across 5 counties.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
              <Card class="p-8 bg-ez2fix-cream border-2 border-ez2fix-primary">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 rounded-full bg-ez2fix-primary flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-ez2fix-dark mb-3">Licensed & Insured</h3>
                    <p class="text-ez2fix-brown leading-relaxed">
                      NJ State Licensed Contractor <span class="font-bold text-ez2fix-primary">#13VH13553300</span> with comprehensive liability and workers' compensation insurance coverage.
                    </p>
                  </div>
                </div>
              </Card>

              <Card class="p-8 bg-ez2fix-cream border-2 border-ez2fix-gold">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 rounded-full bg-ez2fix-gold flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-ez2fix-dark mb-3">10+ Years Experience</h3>
                    <p class="text-ez2fix-brown leading-relaxed">
                      Over a decade serving New Jersey families with 12,000+ successful service calls and high customer satisfaction.
                    </p>
                  </div>
                </div>
              </Card>
            </div>

            <p class="text-lg leading-relaxed text-ez2fix-brown">
              We live and work in the communities we serve. Your neighbors are our neighbors, and we take pride in building relationships that last beyond a single service call. Our approach is simple: listen to your needs, provide honest recommendations, and deliver quality work using premium parts and professional techniques. We believe that doing the right thing isn't just good businessâ€”it's the only way to do business.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Values Section -->
    <section class="py-16 md:py-24 bg-ez2fix-cream">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-6">
            What We <span class="text-ez2fix-primary">Stand For</span>
          </h2>
          <p class="text-lg text-ez2fix-brown max-w-3xl mx-auto">
            These principles guide every interaction, repair, and installation we perform across New Jersey.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-5xl mx-auto">
          {coreValues.map((value, index) => (
            <Card class="p-8 bg-white border-2 border-ez2fix-primary hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group h-full">
              <div class="flex items-start space-x-4">
                <div class="w-14 h-14 rounded-full bg-ez2fix-primary flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                  {value.icon === 'shield' && (
                    <svg class="w-7 h-7 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  )}
                  {value.icon === 'warranty' && (
                    <svg class="w-7 h-7 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                    </svg>
                  )}
                  {value.icon === 'quality' && (
                    <svg class="w-7 h-7 text-ez2fix-dark" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                    </svg>
                  )}
                  {value.icon === 'clock' && (
                    <svg class="w-7 h-7 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  )}
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-ez2fix-dark mb-3">{value.title}</h3>
                  <p class="text-ez2fix-brown leading-relaxed">{value.description}</p>
                </div>
              </div>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Final CTA Section -->
    <section class="py-16 md:py-24 gradient-dark">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-cream mb-6">
            Ready to Experience the Ez2Fix Difference?
          </h2>
          <p class="text-lg md:text-xl text-ez2fix-gold mb-10 max-w-2xl mx-auto">
            Join thousands of satisfied New Jersey homeowners who trust us with their garage door needs. Licensed, insured, and committed to your satisfaction.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={siteConfig.links.phone}
              class="inline-flex items-center justify-center px-8 py-4 bg-ez2fix-primary hover:bg-ez2fix-primary/90 text-ez2fix-dark font-bold text-lg rounded-xl shadow-lg hover:shadow-xl transition-all duration-300"
            >
              <svg class="h-6 w-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call {siteConfig.business.phone}
            </a>

            <a
              href="/booking"
              class="inline-flex items-center justify-center px-8 py-4 bg-white border-2 border-ez2fix-gold hover:bg-ez2fix-gold text-ez2fix-dark font-bold text-lg rounded-xl transition-all duration-300"
            >
              <svg class="h-6 w-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              Get Free Estimate
            </a>
          </div>

          <!-- Service Area Coverage -->
          <div class="mt-12 pt-8 border-t border-ez2fix-gold/30">
            <p class="text-ez2fix-gold mb-4">Proudly Serving 5 Counties Across Northern New Jersey</p>
            <div class="flex flex-wrap justify-center gap-3 text-sm">
              <span class="px-4 py-2 bg-ez2fix-cream/10 text-ez2fix-cream rounded-lg border border-ez2fix-primary/30">Bergen County</span>
              <span class="px-4 py-2 bg-ez2fix-cream/10 text-ez2fix-cream rounded-lg border border-ez2fix-primary/30">Hudson County</span>
              <span class="px-4 py-2 bg-ez2fix-cream/10 text-ez2fix-cream rounded-lg border border-ez2fix-primary/30">Passaic County</span>
              <span class="px-4 py-2 bg-ez2fix-cream/10 text-ez2fix-cream rounded-lg border border-ez2fix-primary/30">Essex County</span>
              <span class="px-4 py-2 bg-ez2fix-cream/10 text-ez2fix-cream rounded-lg border border-ez2fix-primary/30">Morris County</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <FooterClean />
</BaseLayout>
