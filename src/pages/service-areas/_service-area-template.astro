            <!-- Main Headlines -->
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6">
              Garage Door Repair<br/>
              <span class="text-ez2fix-gold">{location.city}, NJ</span>
            </h1>

            <!-- Value Proposition -->
