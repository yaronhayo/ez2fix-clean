>
  <HeaderClean />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative py-16 md:py-24 overflow-hidden">
      <!-- Background Image with Overlay -->
      <div class="absolute inset-0">
        <img
          src="https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/garage-door.webp"
          alt={`Professional garage door services in ${location.city}, NJ`}
          class="w-full h-full object-cover"
          width="1920"
          height="1080"
          loading="eager"
          decoding="async"
          fetchpriority="high"
        />
        <div class="absolute inset-0 bg-gradient-to-br from-black/85 via-black/70 to-black/85"></div>
        <div class="absolute inset-0 bg-ez2fix-dark/20"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-7xl mx-auto">

          <!-- Breadcrumb -->
