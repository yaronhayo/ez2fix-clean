              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-ez2fix-primary font-semibold">{location.city}</span>
          </nav>

          <!-- Main Content -->
