              <p class="text-xl sm:text-2xl text-ez2fix-gold mb-6 font-medium">
                Licensed • Insured • 10-Year Warranty
              </p>
              <p class="text-lg sm:text-xl text-white/90 leading-relaxed">
                {cityDescription}
              </p>
            </div>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-2xl mx-auto">
              <a
                href={siteConfig.links.phone}
                class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-ez2fix-primary hover:bg-ez2fix-primary/90 text-ez2fix-dark font-bold text-base sm:text-lg rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 flex items-center justify-center gap-2"
