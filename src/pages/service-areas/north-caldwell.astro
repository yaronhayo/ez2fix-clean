<script>
  // Initialize service area map
  function initServiceAreaMap() {
    if (!window.google || !window.google.maps) {
      console.error('Google Maps API not available for service area map');
      showMapError();
      return;
    }
    
    const mapElement = document.getElementById('service-area-map');
    if (!mapElement) return;

    // Location data for North Caldwell
    const center = { lat: 40.8715, lng: -74.2585 };
    const locations = [
      { name: 'North Caldwell', lat: 40.8715, lng: -74.2585, primary: true },
      { name: 'West Caldwell', lat: 40.8398, lng: -74.2951 },
      { name: 'Caldwell', lat: 40.8390, lng: -74.2765 },
      { name: 'Fairfield', lat: 40.8837, lng: -74.3065 },
      { name: 'Roseland', lat: 40.8201, lng: -74.3043 },
      { name: 'Pine Brook', lat: 40.8590, lng: -74.3493 }
    ];

    // Create map
    const map = new google.maps.Map(mapElement, {
      zoom: 12,
      center: center,
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      styles: [
        {
          featureType: "all",
          elementType: "geometry.fill",
          stylers: [{ color: "#F3F3E6" }]
        },
        {
          featureType: "water",
          elementType: "geometry.fill",
          stylers: [{ color: "#BB8525" }]
        },
        {
          featureType: "road",
          elementType: "geometry.stroke",
          stylers: [{ color: "#1D1912" }]
        }
      ]
    });

    // Add markers for each location
    locations.forEach(location => {
      const marker = new google.maps.Marker({
        position: { lat: location.lat, lng: location.lng },
        map: map,
        title: `${location.name} - Ez2Fix Service Area`,
        icon: {
          path: google.maps.SymbolPath.CIRCLE,
          scale: location.primary ? 20 : 15,
          fillColor: location.primary ? '#D2A63C' : '#BB8525',
          fillOpacity: 1,
          strokeColor: '#1D1912',
          strokeWeight: 3
        }
      });
      
      const infoWindow = new google.maps.InfoWindow({
        content: `
          <div style="padding: 12px; font-family: Arial, sans-serif; max-width: 250px;">
            <h4 style="color: #1D1912; margin: 0 0 8px 0; font-size: 16px;">${location.name}</h4>
            <p style="color: #BB8525; margin: 0 0 8px 0; font-size: 14px;">
              ${location.primary ? 'Primary Service Area' : 'Service Coverage Area'}
            </p>
            <div style="display: flex; gap: 6px; margin-top: 8px;">
              <a href="tel:(201) 554-6769" 
                 style="background-color: #D2A63C; color: #F3F3E6; padding: 6px 12px; 
                        border-radius: 4px; text-decoration: none; font-size: 12px; font-weight: bold;">Call Now</a>
            </div>
          </div>
        `
      });
      
      marker.addListener('click', () => {
        infoWindow.open(map, marker);
      });
    });

    // Show primary location info window by default
    const primaryMarker = locations.find(loc => loc.primary);
    if (primaryMarker) {
      const primaryInfoWindow = new google.maps.InfoWindow({
        content: `
          <div style="padding: 12px; font-family: Arial, sans-serif; max-width: 250px;">
            <h4 style="color: #1D1912; margin: 0 0 8px 0; font-size: 16px;">North Caldwell</h4>
            <p style="color: #BB8525; margin: 0 0 8px 0; font-size: 14px;">Primary Service Area</p>
            <div style="display: flex; gap: 6px; margin-top: 8px;">
              <a href="tel:(201) 554-6769" 
                 style="background-color: #D2A63C; color: #F3F3E6; padding: 6px 12px; 
                        border-radius: 4px; text-decoration: none; font-size: 12px; font-weight: bold;">Call Now</a>
            </div>
          </div>
        `
      });
      
      const marker = new google.maps.Marker({
        position: center,
        map: map
      });
      
      primaryInfoWindow.open(map, marker);
    }
  }

  function showMapError() {
    const mapElement = document.getElementById('service-area-map');
    if (mapElement) {
      mapElement.innerHTML = `
        <div class="text-center p-8">
          <div class="text-lg font-semibold mb-2" style="color: #1D1912;">Service Area Map Temporarily Unavailable</div>
          <div class="text-sm" style="color: #BB8525;">We serve North Caldwell and all surrounding Essex County areas</div>
        </div>
      `;
    }
  }

  // Load map when Google Maps API is available
  async function loadServiceAreaMap() {
    try {
      const response = await fetch('/api/maps-key');
      const config = await response.json();
      
      if (config.apiKey) {
        await window.EZ2FIX_MAPS.loadAPI(config.apiKey);
        initServiceAreaMap();
      } else {
        showMapError();
      }
    } catch (error) {
      console.error('Failed to load service area map:', error);
      showMapError();
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadServiceAreaMap);
  } else {
    loadServiceAreaMap();
  }

  // Fallback timeout
  setTimeout(showMapError, 10000);
</script>