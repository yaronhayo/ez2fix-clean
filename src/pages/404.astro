---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CTA from '@/components/ui/CTA.astro';
import { siteConfig } from '@/config/site';

const title = "Page Not Found - Ez2Fix Garage Door Service";
const description = "The page you're looking for could not be found. Browse our garage door services or contact us for help.";
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen gradient-dark flex items-center justify-center px-4">
    <div class="max-w-2xl mx-auto text-center">
      
      <!-- 404 Header -->
      <div class="mb-8">
        <div class="text-8xl md:text-9xl font-bold text-ez2fix-primary mb-4">404</div>
        <h1 class="text-3xl md:text-4xl font-bold text-ez2fix-cream mb-4">
          Oops! Page Not Found
        </h1>
        <p class="text-lg text-ez2fix-gold">
          The page you're looking for seems to have moved or doesn't exist.
        </p>
      </div>
      
      <!-- Helpful Links -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        <a href="/" 
           class="p-6 rounded-lg border-2 border-ez2fix-brown/30 hover:border-ez2fix-primary transition-colors group">
          <div class="w-12 h-12 bg-ez2fix-primary rounded-full flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <h3 class="font-semibold text-ez2fix-cream mb-2">Go Home</h3>
          <p class="text-sm text-ez2fix-gold">Return to our homepage</p>
        </a>
        
        <a href="/services" 
           class="p-6 rounded-lg border-2 border-ez2fix-brown/30 hover:border-ez2fix-primary transition-colors group">
          <div class="w-12 h-12 bg-ez2fix-primary rounded-full flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-ez2fix-cream mb-2">Our Services</h3>
          <p class="text-sm text-ez2fix-gold">Browse garage door services</p>
        </a>
        
        <a href="/service-areas" 
           class="p-6 rounded-lg border-2 border-ez2fix-brown/30 hover:border-ez2fix-primary transition-colors group">
          <div class="w-12 h-12 bg-ez2fix-primary rounded-full flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-ez2fix-cream mb-2">Service Areas</h3>
          <p class="text-sm text-ez2fix-gold">Find your location</p>
        </a>
        
        <a href="/contact" 
           class="p-6 rounded-lg border-2 border-ez2fix-brown/30 hover:border-ez2fix-primary transition-colors group">
          <div class="w-12 h-12 bg-ez2fix-primary rounded-full flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-ez2fix-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-ez2fix-cream mb-2">Contact Us</h3>
          <p class="text-sm text-ez2fix-gold">Get help directly</p>
        </a>
      </div>
      
      <!-- Emergency Contact -->
      <div class="bg-ez2fix-brown/20 rounded-lg p-6 mb-8">
        <h3 class="text-xl font-semibold text-ez2fix-primary mb-3">Need Emergency Service?</h3>
        <p class="text-ez2fix-cream mb-4">If you have an urgent garage door issue, don't wait!</p>
        <CTA 
          variant="primary"
          size="medium"
          text={`Call ${siteConfig.business.phone}`}
          href={siteConfig.links.phone}
          icon="phone"
          class="inline-flex"
        />
      </div>
      
      <!-- Search Help -->
      <div class="text-center">
        <p class="text-ez2fix-gold mb-4">Looking for something specific?</p>
        <div class="flex flex-wrap justify-center gap-2 text-sm">
          <a href="/services/emergency-garage-door-repair" class="text-ez2fix-primary hover:text-ez2fix-gold transition-colors">Emergency Repair</a>
          <span class="text-ez2fix-brown">•</span>
          <a href="/services/garage-door-spring-repair" class="text-ez2fix-primary hover:text-ez2fix-gold transition-colors">Spring Repair</a>
          <span class="text-ez2fix-brown">•</span>
          <a href="/services/garage-door-opener-installation" class="text-ez2fix-primary hover:text-ez2fix-gold transition-colors">Opener Installation</a>
          <span class="text-ez2fix-brown">•</span>
          <a href="/booking" class="text-ez2fix-primary hover:text-ez2fix-gold transition-colors">Get Estimate</a>
          <span class="text-ez2fix-brown">•</span>
          <a href="/faq" class="text-ez2fix-primary hover:text-ez2fix-gold transition-colors">FAQ</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>