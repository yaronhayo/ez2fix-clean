  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  star: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
  check: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
};
---

<BaseLayout
  title="Professional Garage Door Services New Jersey | Ez2Fix LLC"
  description="Complete garage door services in NJ - emergency repair, spring replacement, opener installation & more. Licensed #13VH13553300. 12,000+ families helped."
  keywords="garage door services, garage door repair, garage door installation, emergency garage door repair, garage door spring replacement, garage door opener installation, commercial garage door service, New Jersey garage door services"
>
  <HeaderClean />
  <main id="main-content">

    <!-- Hero Section -->
    <section class="relative py-16 md:py-24 overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0">
        <img
          src="https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/garage-door.webp"
          alt="Professional garage door services"
          class="w-full h-full object-cover"
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-br from-black/85 via-black/70 to-black/85"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-5xl mx-auto text-center">

          <!-- Breadcrumb -->
          <nav class="flex items-center justify-center space-x-2 text-sm mb-8 text-ez2fix-gold">
            <a href="/" class="hover:text-ez2fix-primary transition-colors">Home</a>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-ez2fix-primary font-semibold">Services</span>
          </nav>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6">
            Professional <span class="text-ez2fix-gold">Garage Door</span> Services
          </h1>

          <p class="text-xl sm:text-2xl text-ez2fix-gold mb-4 font-medium">
            Licensed • Insured • 24/7 Emergency Service
          </p>

          <p class="text-lg sm:text-xl text-white/90 leading-relaxed mb-8">
            Expert garage door repair and installation across New Jersey. 12,000+ families trust our professional service.
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={siteConfig.links.phone}
              class="inline-flex items-center px-8 py-4 bg-ez2fix-primary hover:bg-ez2fix-primary/90 text-ez2fix-dark font-bold text-lg rounded-xl shadow-lg hover:shadow-xl transition-all duration-300"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call {siteConfig.business.phone}
            </a>

            <a
              href="/booking"
              class="inline-flex items-center px-8 py-4 bg-transparent border-2 border-ez2fix-gold hover:bg-ez2fix-gold text-ez2fix-gold hover:text-ez2fix-dark font-bold text-lg rounded-xl transition-all duration-300"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Schedule Service
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Services Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">

          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-6">
              Complete <span class="text-ez2fix-primary">Garage Door Services</span>
            </h2>
            <p class="text-base md:text-lg text-ez2fix-brown max-w-3xl mx-auto leading-relaxed">
              From emergency repairs to new installations, we provide comprehensive garage door solutions for homes and businesses across New Jersey.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {services.map((service) => (
              <ServiceCard
                title={service.title}
                description={service.description}
                image={service.image}
                features={service.features}
                warranty={service.warranty}
                badge={service.badge}
                href={service.href}
                popular={service.popular}
                theme="light"
              />
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-16 md:py-24 bg-ez2fix-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">

          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-6">
              Why Choose <span class="text-ez2fix-primary">Ez2Fix</span>
            </h2>
            <p class="text-base md:text-lg text-ez2fix-brown max-w-3xl mx-auto leading-relaxed">
              Professional garage door service backed by licensing, experience, and a commitment to quality workmanship.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 mb-12">
            {whyChooseUs.map((reason) => (
              <Card class="p-6 md:p-8 bg-white border-2 border-ez2fix-primary/20 hover:border-ez2fix-primary text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <div class="w-16 h-16 mx-auto mb-4 bg-ez2fix-primary rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[reason.icon]} />
                  </svg>
                </div>
                <div class="text-3xl md:text-4xl font-bold text-ez2fix-primary mb-2">{reason.stat}</div>
                <h3 class="text-xl md:text-2xl font-bold text-ez2fix-dark mb-3">{reason.title}</h3>
                <p class="text-sm md:text-base text-ez2fix-brown leading-relaxed">{reason.description}</p>
              </Card>
            ))}
          </div>

          <!-- Process Section -->
          <div class="bg-white rounded-2xl p-6 md:p-10 lg:p-12 shadow-xl border-2 border-ez2fix-primary/20">
            <h3 class="text-2xl md:text-3xl font-bold text-ez2fix-dark mb-8 md:mb-10 text-center">
              Simple <span class="text-ez2fix-primary">4-Step</span> Process
            </h3>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
              {processSteps.map((step, index) => (
                <div class="text-center group">
                  <div class={`w-16 h-16 md:w-20 md:h-20 mx-auto mb-4 rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300 ${
                    index === 0 ? 'bg-ez2fix-primary' :
                    index === 1 ? 'bg-ez2fix-gold' :
                    index === 2 ? 'bg-ez2fix-brown' : 'bg-ez2fix-primary'
                  }`}>
                    <span class={`text-2xl md:text-3xl font-bold ${index === 1 ? 'text-ez2fix-dark' : 'text-white'}`}>
                      {step.step}
                    </span>
                  </div>
                  <h4 class="text-base md:text-lg font-bold text-ez2fix-dark mb-2">{step.title}</h4>
                  <p class="text-sm md:text-base text-ez2fix-brown leading-relaxed">{step.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 md:py-24 bg-white">
      <FAQComponentClean
        faqs={[
          {
            question: "What garage door services do you provide?",
            answer: "We provide complete garage door services including 24/7 emergency repair, spring replacement, opener installation, new door installation, commercial service, and general repairs. All services are backed by our 10-year warranty and performed by licensed technicians."
          },
          {
            question: "Do you offer emergency garage door repair?",
            answer: "Yes! We offer 24/7 emergency garage door repair service across Northern NJ. Whether your door is stuck, a spring broke, or you have any urgent issue, we prioritize emergency calls and provide same-day response."
          },
          {
            question: "How much does garage door repair cost?",
            answer: "Costs vary based on the specific repair needed. Most spring repairs range $200-400. We provide transparent, upfront pricing before any work begins - no surprises. All quotes are honored and backed by our 10-year warranty."
          },
          {
            question: "Are you licensed and insured?",
            answer: "Absolutely! Ez2Fix is fully licensed by New Jersey State (License #13VH13553300) and carries comprehensive insurance. We're a local business serving families since 2014 with an A+ BBB rating."
          },
          {
            question: "What areas do you serve in New Jersey?",
            answer: "We serve all of Northern NJ including Bergen, Essex, Morris, Hudson, and Passaic counties. Cities include Elmwood Park, Fair Lawn, Clifton, Montclair, Cedar Grove, Little Falls, Newark, West Orange, and more."
          },
          {
            question: "Do you work on all garage door brands?",
            answer: "Yes! We service all major garage door brands including LiftMaster, Chamberlain, Genie, Craftsman, Wayne Dalton, Clopay, Amarr, and Chi. Our technicians stock parts for most common brands for immediate repairs."
          }
        ]}
        title="Common <span class='text-ez2fix-primary'>Questions</span> About Our Services"
        subtitle="Everything you need to know about our professional garage door services in New Jersey."
      />
    </section>

    <!-- Reviews Section -->
    <section class="py-16 md:py-24 bg-ez2fix-cream">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-ez2fix-dark">
              What Our <span class="text-ez2fix-primary">Customers</span> Say
            </h2>
            <p class="text-base md:text-lg max-w-2xl mx-auto leading-relaxed text-ez2fix-brown">
              Real experiences from New Jersey homeowners and businesses we've served.
            </p>
          </div>

          <div class="mb-8">
            <ReviewsCarouselClean pageType="services" />
          </div>

          <div class="text-center">
            <a href="/reviews" class="inline-flex items-center px-8 py-4 bg-ez2fix-primary text-ez2fix-dark hover:bg-ez2fix-primary/90 font-bold text-base md:text-lg rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
              Read All Reviews
              <svg class="h-5 w-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <CTASectionClean
      title="Ready for Professional <span class='text-ez2fix-gold'>Garage Door Service?</span>"
      subtitle="One call connects you with licensed professionals ready to solve your garage door problems. <span class='text-ez2fix-gold font-bold'>Quality service guaranteed</span>."
      primaryCTA={{
        text: `Call ${siteConfig.business.phone}`,
        href: siteConfig.links.phone,
        icon: "phone"
      }}
      secondaryCTA={{
        text: "Schedule Service Online",
        href: "/booking",
        icon: "calendar"
      }}
      trustIndicators={[
        { icon: "shield", text: "Licensed #13VH13553300" },
        { icon: "star", text: "5.0★ Rating" },
        { icon: "check", text: "10-Year Warranty" }
      ]}
      theme="dark"
    />
  </main>
  <FooterClean />
</BaseLayout>
