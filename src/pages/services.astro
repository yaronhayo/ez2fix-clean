const whyChooseUs = [
  {
    icon: "shield",
    title: "Licensed & Insured",
    stat: "#13VH13553300",
    description: "NJ State Licensed contractor with full insurance protection"
  },
  {
    icon: "star",
    title: "Proven Track Record",
