---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderClean from '@/components/layout/HeaderClean.astro';
import FooterClean from '@/components/layout/FooterClean.astro';
import BookingFormClean from '@/components/ui/BookingFormClean.astro';
import FAQComponentClean from '@/components/ui/FAQComponentClean.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import { siteConfig } from '@/config/site';

// Key service benefits
const keyBenefits = [
  {
    title: "24/7 Emergency Service",
    description: "Available day and night when you need emergency repairs",
    icon: "clock"
  },
  {
    title: "Licensed & Insured",
    description: "Professional service with #13VH13553300 license",
    icon: "shield"
  },
  {
    title: "Same-Day Solutions",
    description: "Most emergency repairs completed on first visit",
    icon: "check"
  }
];

// Main services
const services = [
  {
    title: "Emergency Spring Replacement",
    description: "Broken torsion or extension springs replaced with 10-year warranty. Professional installation with proper tension and safety cables.",
    features: ["Torsion & extension springs", "10-year warranty", "Safety cables included", "Proper tension guaranteed"]
  },
  {
    title: "Emergency Opener Repair",
    description: "Complete opener diagnostics and repair for all major brands. Motors, circuit boards, remotes, and sensors serviced professionally.",
    features: ["All brands serviced", "Circuit board repair", "Remote programming", "Sensor alignment"]
  },
  {
    title: "Off-Track & Cable Repair",
    description: "Emergency track realignment and cable replacement. Professional service to secure your door and restore safe operation.",
    features: ["Track realignment", "Cable replacement", "Roller inspection", "Safety verification"]
  }
];

// Customer reviews
const reviews = [
  {
    text: "Spring broke at 11 PM and they came within the hour. Professional service that got us back to normal fast. Highly recommend for emergencies.",
    author: "Sarah M.",
    location: "Montclair, NJ",
    service: "Emergency Spring Replacement"
  },
  {
    text: "Storm damaged our door and left it stuck open. Same-day response secured our home. True professionals who understand emergencies.",
    author: "Mike R.",
    location: "Fair Lawn, NJ",
    service: "Track Repair"
  },
  {
    text: "Opener failed and we couldn't get out. They diagnosed and fixed it within hours. Reliable service when it matters most.",
    author: "Jennifer L.",
    location: "Clifton, NJ",
    service: "Opener Repair"
  },
  {
    text: "Cable snapped and door was dangerous. They came same day, replaced everything, and tested thoroughly. Peace of mind restored.",
    author: "David K.",
    location: "Wayne, NJ",
    service: "Cable Replacement"
  },
  {
    text: "Late night spring break had us worried. Professional service arrived quickly and fixed everything perfectly. Grateful for their availability.",
    author: "Lisa T.",
    location: "Paramus, NJ",
    service: "Emergency Spring Service"
  },
  {
    text: "Door stuck halfway scared us. They responded fast, secured everything, and completed repairs professionally. Excellent emergency service.",
    author: "Robert H.",
    location: "Elmwood Park, NJ",
    service: "Emergency Track Service"
  }
];

// FAQs
const faqs = [
  {
    question: "Do you really provide 24/7 emergency service?",
    answer: "Yes. We understand garage door emergencies don't wait for business hours. Our emergency service is available around the clock for urgent situations like broken springs, security issues, or when you're locked out."
  },
  {
    question: "How quickly can you arrive for an emergency?",
    answer: "We prioritize emergency calls and work to arrive as quickly as possible. Most emergency situations involve same-day service to restore your security and access."
  },
  {
    question: "What qualifies as a garage door emergency?",
    answer: "True emergencies include broken springs (door won't open), doors stuck open (security risk), off-track doors (safety hazard), broken cables, or opener failures preventing garage access. We handle all urgent situations."
  },
  {
    question: "Will the repair be completed on the first visit?",
    answer: "Most emergency repairs are completed during the first visit. We carry common parts like springs, cables, and rollers. For specialized parts, we'll secure your door and return to complete the repair."
  },
  {
    question: "Do emergency repairs include warranties?",
    answer: "Yes. Our emergency repairs include the same warranties as scheduled service - 10-year warranties on springs and comprehensive coverage on workmanship. Emergency situations don't mean compromised quality."
  }
];
---

<BaseLayout
  title="24/7 Emergency Garage Door Repair NJ | Licensed Service #13VH13553300"
  description="Emergency garage door repair available 24/7 in NJ. Broken springs, off-track doors, opener failures. Licensed service #13VH13553300. Same-day solutions."
  keywords="emergency garage door repair, 24/7 garage door repair, broken spring repair, emergency door service NJ, same day garage door repair, emergency opener repair, off track door repair"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "EmergencyService",
      "@id": "https://ez2fixllc.com/services/emergency-garage-door-repair#service",
      "name": "24/7 Emergency Garage Door Repair Services in New Jersey",
      "description": "Emergency garage door repair available 24/7 for broken springs, off-track doors, and opener failures throughout New Jersey.",
      "provider": {
        "@type": "LocalBusiness",
        "@id": "https://ez2fixllc.com#business",
        "name": "Ez2Fix Garage Door Services",
        "telephone": siteConfig.business.phone
      },
      "areaServed": {
        "@type": "State",
        "name": "New Jersey"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "100",
        "bestRating": "5"
      },
      "review": reviews.map(review => ({
        "@type": "Review",
        "author": {
          "@type": "Person",
          "name": review.author
        },
        "reviewRating": {
          "@type": "Rating",
          "ratingValue": 5,
          "bestRating": 5
        },
        "reviewBody": review.text
      }))
    })} />
  </Fragment>

  <HeaderClean />

  <main id="main-content" class="bg-ez2fix-cream">

    <!-- Breadcrumbs -->
    <div class="bg-white border-b border-ez2fix-brown/10">
      <div class="container mx-auto px-4 py-3">
        <Breadcrumbs
          items={[
            { label: 'Home', href: '/' },
            { label: 'Services', href: '/services' },
            { label: 'Emergency Repair', href: '/services/emergency-garage-door-repair' }
          ]}
        />
      </div>
    </div>

    <!-- Hero Section -->
    <section class="relative py-16 md:py-20 bg-gradient-to-br from-ez2fix-dark to-ez2fix-brown overflow-hidden">
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,_var(--ez2fix-primary)_0%,_transparent_50%)]"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">

          <!-- Hero Content -->
          <div class="text-white">
            <div class="inline-flex items-center px-4 py-2 bg-ez2fix-primary/20 backdrop-blur-sm border border-ez2fix-primary text-ez2fix-primary font-bold rounded-full text-sm mb-6">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              24/7 EMERGENCY SERVICE
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
              Emergency Garage Door Repair
            </h1>

            <p class="text-xl text-ez2fix-cream mb-8 leading-relaxed">
              Broken spring? Door stuck open? We provide 24/7 emergency garage door repair throughout New Jersey. Licensed service that responds fast when you need it most.
            </p>

            <a
              href={siteConfig.links.phone}
              class="inline-flex items-center justify-center px-8 py-4 bg-ez2fix-primary text-ez2fix-dark hover:bg-ez2fix-gold font-bold text-lg rounded-lg shadow-xl hover:shadow-2xl transition-all duration-300"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call {siteConfig.business.phone}
            </a>
          </div>

          <!-- Booking Form -->
          <div class="bg-white rounded-xl shadow-2xl p-6 border-4 border-ez2fix-primary">
            <h3 class="text-2xl font-bold text-ez2fix-dark mb-2">Request Emergency Service</h3>
            <p class="text-ez2fix-brown mb-6">Available 24/7 for urgent repairs</p>
            <BookingFormClean variant="hero" />
          </div>
        </div>
      </div>
    </section>

    <!-- Key Benefits -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {keyBenefits.map((benefit) => (
            <div class="text-center">
              <div class="w-16 h-16 bg-ez2fix-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                {benefit.icon === 'clock' && (
                  <svg class="w-8 h-8 text-ez2fix-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {benefit.icon === 'shield' && (
                  <svg class="w-8 h-8 text-ez2fix-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                )}
                {benefit.icon === 'check' && (
                  <svg class="w-8 h-8 text-ez2fix-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold text-ez2fix-dark mb-2">{benefit.title}</h3>
              <p class="text-ez2fix-brown">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Emergency Services -->
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              Emergency Services We Provide
            </h2>
            <p class="text-lg text-ez2fix-brown max-w-2xl mx-auto">
              Professional emergency repair for all garage door problems. Same-day service to restore your security and access.
            </p>
          </div>

          <div class="space-y-8">
            {services.map((service) => (
              <div class="bg-white rounded-xl shadow-lg p-8 border-2 border-ez2fix-brown/10 hover:border-ez2fix-primary/30 transition-colors">
                <h3 class="text-2xl font-bold text-ez2fix-dark mb-4">{service.title}</h3>
                <p class="text-lg text-ez2fix-brown mb-6 leading-relaxed">{service.description}</p>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  {service.features.map((feature) => (
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-ez2fix-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      <span class="text-ez2fix-dark">{feature}</span>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Reviews -->
    <section class="py-16 md:py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              What Customers Say About Our Emergency Service
            </h2>
            <p class="text-lg text-ez2fix-brown">
              Real experiences from New Jersey homeowners who needed emergency repairs
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            {reviews.map((review) => (
              <div class="bg-ez2fix-cream rounded-lg p-6 border-2 border-ez2fix-brown/10">
                <div class="flex text-ez2fix-gold mb-4">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                      <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                    </svg>
                  ))}
                </div>
                <p class="text-ez2fix-dark mb-4 leading-relaxed">"{review.text}"</p>
                <div class="border-t border-ez2fix-brown/20 pt-4">
                  <p class="font-bold text-ez2fix-dark">{review.author}</p>
                  <p class="text-sm text-ez2fix-brown">{review.location}</p>
                  <p class="text-xs text-ez2fix-primary font-semibold mt-1">{review.service}</p>
                </div>
              </div>
            ))}
          </div>

          <div class="text-center">
            <a
              href="/reviews"
              class="inline-flex items-center px-6 py-3 bg-ez2fix-primary text-ez2fix-dark hover:bg-ez2fix-gold font-bold rounded-lg transition-colors"
            >
              Read All Reviews
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQs -->
    <FAQComponentClean
      faqs={faqs}
      title="Emergency Service <span class='text-ez2fix-primary'>Questions</span>"
      subtitle="Common questions about our 24/7 emergency garage door repair service"
    />

    <!-- Final CTA -->
    <section class="py-16 md:py-20 bg-gradient-to-br from-ez2fix-brown to-ez2fix-dark">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center text-white">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Need Emergency Garage Door Repair?
          </h2>
          <p class="text-xl text-ez2fix-cream mb-8">
            Available 24/7 for broken springs, stuck doors, and all emergency repairs. Licensed service throughout New Jersey.
          </p>
          <a
            href={siteConfig.links.phone}
            class="inline-flex items-center px-10 py-5 bg-ez2fix-primary text-ez2fix-dark hover:bg-ez2fix-gold font-bold text-xl rounded-lg shadow-2xl transition-colors"
          >
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call Now: {siteConfig.business.phone}
          </a>
          <p class="text-ez2fix-cream mt-6 text-sm">
            Licensed #13VH13553300 | Available 24/7 | Same-Day Service
          </p>
        </div>
      </div>
    </section>

  </main>

  <FooterClean />
</BaseLayout>
