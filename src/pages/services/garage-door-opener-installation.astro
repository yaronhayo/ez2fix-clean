---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderClean from '@/components/layout/HeaderClean.astro';
import FooterClean from '@/components/layout/FooterClean.astro';
import BookingFormClean from '@/components/ui/BookingFormClean.astro';
import FAQComponentClean from '@/components/ui/FAQComponentClean.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import { siteConfig } from '@/config/site';

// Opener scenarios - Problem/Solution/Result format
const openerScenarios = [
  {
    scenario: "Complete Opener Failure",
    problem: "Your opener stopped working entirely - no response to remotes, wall button, or smartphone app. You're stuck manually lifting a heavy door multiple times daily.",
    solution: "Professional installation of modern opener with advanced features, proper electrical connections, and safety sensors that work perfectly from day one.",
    benefit: "Convenient access restored with WiFi connectivity, smartphone control, and battery backup - plus 10-year warranty for peace of mind.",
    icon: "power"
  },
  {
    scenario: "Loud Noisy Operation",
    problem: "Your chain-drive opener sounds like a freight train, shaking walls and waking family members. The noise is disruptive and getting worse with age.",
    solution: "Upgrade to whisper-quiet belt-drive opener with professional mounting, vibration isolation, and smooth operation that's barely audible.",
    benefit: "Ultra-quiet operation that won't disturb anyone - perfect for attached garages and bedrooms above garage spaces.",
    icon: "noise"
  },
  {
    scenario: "No Smart Features",
    problem: "Your 15-year-old opener lacks WiFi, smartphone control, or home automation. You can't check if door is closed or control it remotely - a security concern.",
    solution: "Install modern smart opener with WiFi connectivity, app control, real-time notifications, and integration with Alexa, Google Home, or Apple HomeKit.",
    benefit: "Complete control from anywhere - check door status, receive alerts, and operate remotely for deliveries or emergencies.",
    icon: "smart"
  }
];

// Why professional installation matters
const whyProfessional = [
  {
    title: "Electrical Safety",
    description: "Professional installation ensures proper electrical connections, circuit protection, and grounding that prevents fire hazards and equipment damage from DIY mistakes.",
    icon: "electric",
    stat: "Licensed electricians"
  },
  {
    title: "Safety Sensor Alignment",
    description: "Photo-eye sensors must be perfectly aligned and tested for auto-reverse to work properly. Our installers ensure all safety features meet federal requirements.",
    icon: "sensor",
    stat: "Perfect alignment"
  },
  {
    title: "Force Adjustment",
    description: "Improper force settings damage doors or create safety hazards. We calibrate opener force perfectly for your specific door weight and track resistance.",
    icon: "force",
    stat: "Precision calibration"
  },
  {
    title: "Smart Technology Setup",
    description: "WiFi configuration, app setup, and home automation integration require technical expertise. We configure everything and train you on all features.",
    icon: "tech",
    stat: "Complete configuration"
  }
];

// Opener services with taglines
const openerServices = [
  {
    title: "Smart WiFi Opener Installation",
    tagline: "Control your garage from anywhere on Earth.",
    description: "Professional installation of the latest smart openers with WiFi connectivity, smartphone apps, and home automation integration. Monitor your door status, receive notifications, and operate remotely with voice commands through Alexa, Google Home, or Apple HomeKit.",
    benefits: [
      "WiFi connectivity and app control",
      "Real-time door status notifications",
      "Voice control integration (Alexa/Google/Apple)",
      "Delivery mode and guest access",
      "Activity logs and scheduling"
    ],
    image: "smart"
  },
  {
    title: "Ultra-Quiet Belt Drive Systems",
    tagline: "So quiet, you'll forget it's running.",
    description: "Expert installation of premium belt-drive openers that operate virtually silent. Perfect for homes with bedrooms above or adjacent to the garage. Reinforced belt provides smooth, vibration-free operation with minimal maintenance and maximum reliability.",
    benefits: [
      "Whisper-quiet operation",
      "Virtually zero vibration",
      "Smooth acceleration/deceleration",
      "Low maintenance belt system",
      "Lifetime warranty on motor"
    ],
    image: "belt"
  },
  {
    title: "Heavy-Duty Chain Drive Installation",
    tagline: "Power and reliability for the heaviest doors.",
    description: "Professional installation of chain-drive openers designed for heavy wood and custom doors. These workhorses provide maximum lifting power with durable construction that lasts decades. Ideal for detached garages where noise isn't a concern.",
    benefits: [
      "Maximum lifting capacity",
      "Heavy-duty steel chain",
      "Powerful motor options",
      "Extreme durability",
      "Best value for detached garages"
    ],
    image: "chain"
  }
];

// Unique opener installation reviews from different NJ locations
const openerReviews = [
  {
    text: "The smart opener installation changed everything! Now I can check if the garage is closed from work and let delivery drivers in remotely. Setup was perfect and they showed me every feature.",
    author: "Jennifer P.",
    location: "Montclair, NJ",
    service: "Smart WiFi Opener Installation",
    rating: 5
  },
  {
    text: "Replaced our incredibly loud chain drive with a belt drive system. It's so quiet now that we actually use the garage door at night without waking anyone up. Professional installation from start to finish.",
    author: "David K.",
    location: "Wayne, NJ",
    service: "Ultra-Quiet Belt Drive Installation",
    rating: 5
  },
  {
    text: "Smart opener install with Alexa integration works flawlessly. Just say 'Alexa, close the garage' and it's done. The notifications when the door opens give me peace of mind when kids get home.",
    author: "Sarah T.",
    location: "Fair Lawn, NJ",
    service: "Smart WiFi Opener Installation",
    rating: 5
  },
  {
    text: "Our heavy wooden door needed serious power. The chain drive opener they installed handles it effortlessly and the safety features work perfectly. Great installation team.",
    author: "Robert M.",
    location: "Ridgewood, NJ",
    service: "Heavy-Duty Chain Drive Installation",
    rating: 5
  },
  {
    text: "Belt drive opener installation was worth every penny for the silence alone. Plus the battery backup means we can always get out even during power outages. Highly recommend!",
    author: "Lisa H.",
    location: "Paramus, NJ",
    service: "Ultra-Quiet Belt Drive Installation",
    rating: 5
  },
  {
    text: "The smart features are incredible - I get notifications when the door opens, can close it remotely, and even set schedules. Installation was clean and professional with great training.",
    author: "Michael S.",
    location: "Clifton, NJ",
    service: "Smart WiFi Opener Installation",
    rating: 5
  }
];

// Opener-specific FAQs
const openerFAQs = [
  {
    question: "Should I choose a belt drive or chain drive opener?",
    answer: "Belt drives are whisper-quiet and ideal for attached garages or rooms above the garage. Chain drives are more affordable and provide maximum power for heavy doors in detached garages where noise isn't a concern. We'll help you choose based on your specific situation."
  },
  {
    question: "Do all smart openers work with my smartphone?",
    answer: "Modern smart openers have dedicated apps for iOS and Android. We configure the app during installation and ensure it works perfectly with your phone. Most also integrate with Alexa, Google Home, and Apple HomeKit for voice control."
  },
  {
    question: "How long does an opener installation take?",
    answer: "Most installations take 2-4 hours including removal of old opener, mounting new unit, electrical connections, safety sensor setup, and complete testing. Smart opener setup adds 30-45 minutes for WiFi configuration and app training."
  },
  {
    question: "Will my old remotes work with a new opener?",
    answer: "Usually no - new openers use different frequencies and rolling code technology for better security. We program new remotes during installation and most smart openers let you use your smartphone as a remote, eliminating the need for separate devices."
  },
  {
    question: "What if my power goes out?",
    answer: "We recommend openers with battery backup that automatically kicks in during outages. You can still open and close your door normally until power returns. This is essential for areas with frequent outages or for ensuring you're never trapped."
  }
];
---

<BaseLayout
  title="Professional Garage Door Opener Installation NJ | Smart WiFi & Belt Drive Openers"
  description="Expert garage door opener installation in NJ. Smart WiFi openers, ultra-quiet belt drives & heavy-duty chain drives. Licensed #13VH13553300. Smart technology experts."
  keywords="garage door opener installation, smart garage door opener, WiFi opener, belt drive opener, chain drive opener, opener replacement, smart home garage, myQ opener installation, LiftMaster installation, professional opener installation NJ"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "@id": "https://ez2fixllc.com/services/garage-door-opener-installation#service",
      "name": "Professional Garage Door Opener Installation Services in New Jersey",
      "description": "Expert garage door opener installation for smart WiFi openers, belt drive and chain drive systems with professional setup and smart home integration.",
      "provider": {
        "@type": "LocalBusiness",
        "@id": "https://ez2fixllc.com#business",
        "name": "Ez2Fix Garage Door Services",
        "telephone": siteConfig.business.phone,
        "priceRange": "$$"
      },
      "areaServed": {
        "@type": "State",
        "name": "New Jersey"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "100",
        "bestRating": "5",
        "worstRating": "1"
      },
      "review": openerReviews.map(review => ({
        "@type": "Review",
        "author": {
          "@type": "Person",
          "name": review.author
        },
        "reviewRating": {
          "@type": "Rating",
          "ratingValue": review.rating,
          "bestRating": 5
        },
        "reviewBody": review.text,
        "itemReviewed": {
          "@type": "Service",
          "name": review.service
        }
      }))
    })} />
  </Fragment>

  <HeaderClean />

  <main id="main-content">
    <Breadcrumbs
      items={[
        { label: 'Home', href: '/' },
        { label: 'Services', href: '/services' },
        { label: 'Opener Installation', href: '/services/garage-door-opener-installation' }
      ]}
    />

    <!-- Hero Section with Booking Form -->
    <section class="relative py-16 md:py-24 overflow-hidden bg-gradient-to-br from-ez2fix-dark via-ez2fix-brown to-ez2fix-dark">
      <!-- Radial gradient overlays for depth -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,_var(--ez2fix-primary)_0%,_transparent_50%)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_50%,_var(--ez2fix-gold)_0%,_transparent_50%)]"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">

          <!-- Hero Content -->
          <div>
            <div class="inline-flex items-center px-4 py-2 bg-ez2fix-primary text-ez2fix-dark font-bold rounded-full text-sm mb-6">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              SMART TECHNOLOGY EXPERTS
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
              <span class="text-white">Smart Opener</span><br />
              <span class="text-ez2fix-primary">Installation</span><br />
              <span class="text-ez2fix-gold">Done Right.</span>
            </h1>

            <p class="text-xl text-ez2fix-cream mb-8 leading-relaxed">
              Professional installation of smart WiFi openers, ultra-quiet belt drives, and heavy-duty chain drives. Control from anywhere with smartphone app integration and voice commands.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 mb-8">
              <a
                href={siteConfig.links.phone}
                class="inline-flex items-center justify-center px-8 py-4 bg-ez2fix-primary text-ez2fix-dark hover:bg-ez2fix-gold font-bold text-lg rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Call {siteConfig.business.phone}
              </a>
            </div>

            <div class="grid grid-cols-3 gap-4 text-center">
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-2xl font-bold text-ez2fix-primary mb-1">2-4 hrs</div>
                <div class="text-sm text-ez2fix-cream">Installation Time</div>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-2xl font-bold text-ez2fix-primary mb-1">WiFi App</div>
                <div class="text-sm text-ez2fix-cream">Smart Control</div>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-2xl font-bold text-ez2fix-primary mb-1">Lifetime</div>
                <div class="text-sm text-ez2fix-cream">Motor Warranty</div>
              </div>
            </div>
          </div>

          <!-- Booking Form with 4px border -->
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-ez2fix-primary to-ez2fix-gold rounded-2xl"></div>
            <div class="relative bg-ez2fix-cream rounded-2xl p-1 m-1">
              <div class="bg-ez2fix-cream rounded-xl p-6">
                <h3 class="text-2xl font-bold text-ez2fix-dark mb-2">Get Free Quote</h3>
                <p class="text-ez2fix-brown mb-6">Smart opener installation consultation</p>
                <BookingFormClean variant="hero" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Opener Scenarios - Problem/Solution/Result -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              When You Need <span class="text-ez2fix-primary">Professional Opener Installation</span>
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              From complete failures to smart upgrades, professional installation ensures safe operation and access to modern convenience features.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {openerScenarios.map((scenario) => (
              <div class="relative group">
                <div class="absolute inset-0 bg-gradient-to-br from-ez2fix-primary to-ez2fix-gold rounded-2xl transform group-hover:scale-105 transition-transform duration-300"></div>
                <div class="relative bg-white rounded-2xl p-8 m-1">
                  <div class="w-16 h-16 bg-gradient-to-br from-ez2fix-primary to-ez2fix-gold rounded-xl flex items-center justify-center mb-6 transform group-hover:rotate-12 transition-transform duration-300">
                    {scenario.icon === 'power' && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                      </svg>
                    )}
                    {scenario.icon === 'noise' && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15.536a5 5 0 001.414 1.06m2.828-9.9a9 9 0 012.828-1.06"/>
                      </svg>
                    )}
                    {scenario.icon === 'smart' && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                    )}
                  </div>

                  <h3 class="text-2xl font-bold text-ez2fix-dark mb-4">{scenario.scenario}</h3>

                  <div class="space-y-3 mb-6">
                    <div class="flex items-start">
                      <span class="text-red-600 font-bold mr-2 mt-1">Problem:</span>
                      <span class="text-ez2fix-brown">{scenario.problem}</span>
                    </div>
                    <div class="flex items-start">
                      <span class="text-ez2fix-primary font-bold mr-2 mt-1">Solution:</span>
                      <span class="text-ez2fix-brown">{scenario.solution}</span>
                    </div>
                    <div class="flex items-start">
                      <span class="text-green-600 font-bold mr-2 mt-1">Result:</span>
                      <span class="text-ez2fix-dark font-semibold">{scenario.benefit}</span>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Why Professional Installation -->
    <section class="py-16 md:py-24 bg-gradient-to-br from-ez2fix-brown via-ez2fix-dark to-ez2fix-brown">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
              Why <span class="text-ez2fix-primary">Professional Installation</span> Matters
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-cream max-w-3xl mx-auto">
              DIY opener installation risks electrical hazards, voided warranties, and improperly calibrated safety features. Professional installation ensures perfect operation.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {whyProfessional.map((reason) => (
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-300">
                <div class="text-4xl font-bold text-ez2fix-primary mb-3">{reason.stat}</div>
                <h3 class="text-xl font-bold text-white mb-3">{reason.title}</h3>
                <p class="text-ez2fix-cream leading-relaxed">{reason.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Opener Services with Alternating Layout -->
    <section class="py-16 md:py-24 bg-gradient-to-br from-ez2fix-cream to-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              Professional <span class="text-ez2fix-primary">Opener Installation</span> Services
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              From smart WiFi openers to ultra-quiet belt drives, we install the perfect opener for your needs with complete setup and training.
            </p>
          </div>

          <div class="space-y-16">
            {openerServices.map((service, index) => (
              <div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 items-center ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
                <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
                  <div class="relative">
                    <div class="absolute -inset-4 bg-gradient-to-r from-ez2fix-primary to-ez2fix-gold rounded-2xl opacity-20 blur-xl"></div>
                    <div class="relative bg-white rounded-2xl p-8 shadow-2xl border-2 border-ez2fix-primary/20">
                      <div class="inline-block px-4 py-1 bg-ez2fix-primary/10 text-ez2fix-primary font-bold rounded-full text-sm mb-4">
                        WARRANTY INCLUDED
                      </div>
                      <h3 class="text-3xl font-bold text-ez2fix-dark mb-3">{service.title}</h3>
                      <p class="text-2xl text-ez2fix-primary font-bold mb-4">{service.tagline}</p>
                      <p class="text-lg text-ez2fix-brown mb-6 leading-relaxed">{service.description}</p>

                      <div class="space-y-3">
                        {service.benefits.map((benefit) => (
                          <div class="flex items-center">
                            <svg class="w-6 h-6 text-ez2fix-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="text-ez2fix-dark font-medium">{benefit}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>

                <div class={index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''}>
                  <div class="relative h-96 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="absolute inset-0 bg-gradient-to-br from-ez2fix-dark to-ez2fix-brown opacity-90"></div>
                    <div class="absolute inset-0 flex items-center justify-center">
                      {service.image === 'smart' && (
                        <svg class="w-32 h-32 text-ez2fix-primary opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                        </svg>
                      )}
                      {service.image === 'belt' && (
                        <svg class="w-32 h-32 text-ez2fix-primary opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                        </svg>
                      )}
                      {service.image === 'chain' && (
                        <svg class="w-32 h-32 text-ez2fix-primary opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                        </svg>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Unique Opener Reviews -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              Opener Installation <span class="text-ez2fix-primary">Success Stories</span>
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              Real experiences from New Jersey homeowners who upgraded to smart, quiet, and reliable opener systems.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
            {openerReviews.map((review) => (
              <div class="bg-white rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border-2 border-ez2fix-primary/10">
                <div class="flex text-ez2fix-gold mb-4">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                      <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                    </svg>
                  ))}
                </div>
                <p class="text-ez2fix-dark leading-relaxed mb-4 text-lg italic">"{review.text}"</p>
                <div class="border-t-2 border-ez2fix-cream pt-4">
                  <p class="font-bold text-ez2fix-dark text-lg">{review.author}</p>
                  <p class="text-sm text-ez2fix-brown">{review.location}</p>
                  <div class="mt-2 inline-block px-3 py-1 bg-ez2fix-primary/10 text-ez2fix-primary text-xs font-bold rounded-full">
                    {review.service}
                  </div>
                </div>
              </div>
            ))}
          </div>

