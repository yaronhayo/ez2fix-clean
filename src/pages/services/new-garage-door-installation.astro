---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeaderClean from '@/components/layout/HeaderClean.astro';
import FooterClean from '@/components/layout/FooterClean.astro';
import BookingFormClean from '@/components/ui/BookingFormClean.astro';
import FAQComponentClean from '@/components/ui/FAQComponentClean.astro';
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro';
import { siteConfig } from '@/config/site';

// Installation scenarios - Problem/Solution/Result format
const installationScenarios = [
  {
    scenario: "Old Door Beyond Repair",
    problem: "Your 20+ year old door has constant breakdowns, poor insulation, and outdated safety features that cost more to maintain than replace.",
    solution: "Complete new door installation with modern materials, proper insulation, advanced safety features, and smart technology integration.",
    benefit: "Modern functionality with R-16 insulation, WiFi connectivity, and 10-year warranty - plus instant curb appeal boost.",
    icon: "door"
  },
  {
    scenario: "Energy Efficiency Upgrade",
    problem: "Uninsulated door causes temperature fluctuations, high energy bills, and uncomfortable adjacent rooms - especially in NJ winters.",
    solution: "Professional installation of insulated door with high R-value, weather seals, and thermal breaks for maximum efficiency.",
    benefit: "Up to 30% reduction in heating/cooling costs, consistent temperatures, and quieter operation with premium insulation.",
    icon: "energy"
  },
  {
    scenario: "Curb Appeal Transformation",
    problem: "Outdated door design doesn't match your renovated home or neighborhood aesthetics, limiting resale value and visual appeal.",
    solution: "Custom design installation with architectural compatibility, premium materials, and personalized color/finish options.",
    benefit: "Instant curb appeal boost that increases home value by up to 4% - the most cost-effective exterior upgrade available.",
    icon: "home"
  }
];

// Why professional installation matters
const whyProfessional = [
  {
    title: "Precise Measurement & Fit",
    description: "Professional installers ensure exact measurements for proper fit, preventing gaps, alignment issues, and operational problems that plague DIY installations.",
    icon: "ruler",
    stat: "1/16 inch precision"
  },
  {
    title: "Structural Compatibility",
    description: "Expert assessment of garage structure, header support, and weight requirements ensures safe installation without compromising building integrity.",
    icon: "structure",
    stat: "Full structural analysis"
  },
  {
    title: "Smart Technology Setup",
    description: "Professional configuration of WiFi connectivity, smartphone controls, and home automation integration - working perfectly from day one.",
    icon: "smart",
    stat: "Complete tech integration"
  },
  {
    title: "Comprehensive Warranty",
    description: "Manufacturer warranties require professional installation. Our work includes installation warranty plus door and parts coverage for complete peace of mind.",
    icon: "warranty",
    stat: "10-year warranty"
  }
];

// Installation services with taglines
const installationServices = [
  {
    title: "Residential Door Installation",
    tagline: "Transform your home's entrance - professionally installed.",
    description: "Complete residential garage door installation with custom sizing, premium materials, and expert mounting. From single to triple-wide doors, we handle all configurations with precise installation and comprehensive testing.",
    benefits: [
      "Custom measurement and fitting",
      "Professional track alignment",
      "Spring tension calibration",
      "Opener integration included",
      "10-year parts warranty"
    ],
    image: "residential"
  },
  {
    title: "Insulated Door Installation",
    tagline: "Energy savings that pay for themselves.",
    description: "Expert installation of insulated garage doors with R-values up to R-18.4 for maximum energy efficiency. Polyurethane or polystyrene insulation options with thermal breaks and weather sealing for year-round comfort.",
    benefits: [
      "Up to R-18.4 insulation value",
      "30% energy cost reduction",
      "Noise reduction benefits",
      "Temperature stabilization",
      "Energy Star certified options"
    ],
    image: "insulated"
  },
  {
    title: "Custom Design Installation",
    tagline: "Your vision, our expertise, perfect results.",
    description: "Professional installation of custom-designed doors tailored to your home's architecture. Wood, steel, aluminum, or composite materials with unlimited design possibilities including windows, hardware, and finishes.",
    benefits: [
      "Architectural consultation",
      "Premium material selection",
      "Custom color and finish",
      "Window configuration options",
      "Designer hardware included"
    ],
    image: "custom"
  }
];

// Unique installation reviews from different NJ locations
const installationReviews = [
  {
    text: "The new insulated door installation completely changed our garage temperature. No more freezing in winter! The team was professional, clean, and finished in one day with perfect results.",
    author: "Michael R.",
    location: "West Caldwell, NJ",
    service: "Insulated Door Installation",
    rating: 5
  },
  {
    text: "Custom wood door installation exceeded all expectations. They matched our home's Tudor style perfectly and the craftsmanship is outstanding. Worth every penny for the curb appeal boost.",
    author: "Jennifer K.",
    location: "Montclair, NJ",
    service: "Custom Design Installation",
    rating: 5
  },
  {
    text: "Smart garage door installation with WiFi was seamless. They configured everything with my phone and Alexa. Now I can check if the door is closed from anywhere - game changer!",
    author: "David L.",
    location: "Wayne, NJ",
    service: "Smart Door Integration",
    rating: 5
  },
  {
    text: "Replaced our 25-year-old door with a modern insulated one. The difference in noise and energy bills is incredible. Installation took 4 hours and they cleaned up everything perfectly.",
    author: "Susan M.",
    location: "Fair Lawn, NJ",
    service: "Residential Door Installation",
    rating: 5
  },
  {
    text: "The carriage-style door installation transformed our home's entire appearance. Neighbors keep asking who did the work. Professional installation made all the difference in the final look.",
    author: "Robert T.",
    location: "Ridgewood, NJ",
    service: "Custom Design Installation",
    rating: 5
  },
  {
    text: "From consultation to final testing, the whole installation process was smooth. They helped us choose the right door for our budget and the R-16 insulation is already saving us money.",
    author: "Patricia H.",
    location: "Paramus, NJ",
    service: "Insulated Door Installation",
    rating: 5
  }
];

// Installation-specific FAQs
const installationFAQs = [
  {
    question: "How long does a new garage door installation take?",
    answer: "Most residential installations take 4-6 hours for a standard single or double door, including removal of the old door. Custom doors or complex installations may require additional time. We complete the job in one day with full cleanup."
  },
  {
    question: "What's the ROI on a new garage door installation?",
    answer: "Garage door replacement provides one of the best ROIs of any home improvement - typically recovering 94-97% of cost at resale according to Remodeling Magazine. Plus immediate benefits of energy savings, functionality, and curb appeal."
  },
  {
    question: "Can I choose any style and color for my new door?",
    answer: "Yes! We offer extensive style options including traditional raised panel, carriage house, contemporary, and custom designs. Color choices include standard and custom finishes to match any home aesthetic."
  },
  {
    question: "How much more does an insulated door cost?",
    answer: "Insulated doors typically cost 15-30% more than non-insulated options, but the investment pays back through energy savings, especially for attached garages. We'll calculate your specific savings based on your situation."
  },
  {
    question: "Do new doors come with smart features included?",
    answer: "Smart features depend on your opener choice. We can install smart openers with WiFi, smartphone control, and home automation integration as part of your installation package, or integrate with existing smart openers."
  }
];
---

<BaseLayout
  title="Professional New Garage Door Installation NJ | Ez2Fix Licensed Installers"
  description="Expert new garage door installation in NJ. Residential, insulated & custom doors professionally installed. Licensed #13VH13553300. Energy efficient installation."
  keywords="new garage door installation, residential door installation, insulated garage door, custom garage door installation, garage door replacement NJ, professional door installers, energy efficient garage doors, smart garage door installation"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "@id": "https://ez2fixllc.com/services/new-garage-door-installation#service",
      "name": "Professional New Garage Door Installation Services in New Jersey",
      "description": "Expert new garage door installation for residential, insulated, and custom doors with professional measurement, mounting, and smart technology integration.",
      "provider": {
        "@type": "LocalBusiness",
        "@id": "https://ez2fixllc.com#business",
        "name": "Ez2Fix Garage Door Services",
        "telephone": siteConfig.business.phone,
        "priceRange": "$$"
      },
      "areaServed": {
        "@type": "State",
        "name": "New Jersey"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "100",
        "bestRating": "5",
        "worstRating": "1"
      },
      "review": installationReviews.map(review => ({
        "@type": "Review",
        "author": {
          "@type": "Person",
          "name": review.author
        },
        "reviewRating": {
          "@type": "Rating",
          "ratingValue": review.rating,
          "bestRating": 5
        },
        "reviewBody": review.text,
        "itemReviewed": {
          "@type": "Service",
          "name": review.service
        }
      }))
    })} />
  </Fragment>

  <HeaderClean />

  <main id="main-content">
    <Breadcrumbs
      items={[
        { label: 'Home', href: '/' },
        { label: 'Services', href: '/services' },
        { label: 'New Door Installation', href: '/services/new-garage-door-installation' }
      ]}
    />

    <!-- Hero Section with Booking Form -->
    <section class="relative py-16 md:py-24 overflow-hidden bg-gradient-to-br from-ez2fix-dark via-ez2fix-brown to-ez2fix-dark">
      <!-- Radial gradient overlays for depth -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,_var(--ez2fix-primary)_0%,_transparent_50%)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_50%,_var(--ez2fix-gold)_0%,_transparent_50%)]"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">

          <!-- Hero Content -->
          <div>
            <div class="inline-flex items-center px-4 py-2 bg-ez2fix-primary text-ez2fix-dark font-bold rounded-full text-sm mb-6">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              PROFESSIONAL INSTALLATION
            </div>

            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
              <span class="text-white">New Garage Door</span><br />
              <span class="text-ez2fix-primary">Installation</span><br />
              <span class="text-ez2fix-gold">Done Right.</span>
            </h1>

            <p class="text-xl text-ez2fix-cream mb-8 leading-relaxed">
              Transform your home with professional new garage door installation. Custom designs, energy-efficient insulation, and smart technology - expertly installed with comprehensive warranties.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 mb-8">
              <a
                href={siteConfig.links.phone}
                class="inline-flex items-center justify-center px-8 py-4 bg-ez2fix-primary text-ez2fix-dark hover:bg-ez2fix-gold font-bold text-lg rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Call {siteConfig.business.phone}
              </a>
            </div>

            <div class="grid grid-cols-3 gap-4 text-center">
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-2xl font-bold text-ez2fix-primary mb-1">4-6 hrs</div>
                <div class="text-sm text-ez2fix-cream">Installation Time</div>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-2xl font-bold text-ez2fix-primary mb-1">10 Years</div>
                <div class="text-sm text-ez2fix-cream">Parts Warranty</div>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-2xl font-bold text-ez2fix-primary mb-1">97% ROI</div>
                <div class="text-sm text-ez2fix-cream">At Resale</div>
              </div>
            </div>
          </div>

          <!-- Booking Form with 4px border -->
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-ez2fix-primary to-ez2fix-gold rounded-2xl"></div>
            <div class="relative bg-ez2fix-cream rounded-2xl p-1 m-1">
              <div class="bg-ez2fix-cream rounded-xl p-6">
                <h3 class="text-2xl font-bold text-ez2fix-dark mb-2">Get Free Quote</h3>
                <p class="text-ez2fix-brown mb-6">Professional installation consultation</p>
                <BookingFormClean variant="hero" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Installation Scenarios - Problem/Solution/Result -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              When You Need <span class="text-ez2fix-primary">Professional Installation</span>
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              From energy efficiency upgrades to complete replacements, professional installation ensures optimal performance and long-term value.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {installationScenarios.map((scenario) => (
              <div class="relative group">
                <div class="absolute inset-0 bg-gradient-to-br from-ez2fix-primary to-ez2fix-gold rounded-2xl transform group-hover:scale-105 transition-transform duration-300"></div>
                <div class="relative bg-white rounded-2xl p-8 m-1">
                  <div class="w-16 h-16 bg-gradient-to-br from-ez2fix-primary to-ez2fix-gold rounded-xl flex items-center justify-center mb-6 transform group-hover:rotate-12 transition-transform duration-300">
                    {scenario.icon === 'door' && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"/>
                      </svg>
                    )}
                    {scenario.icon === 'energy' && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                      </svg>
                    )}
                    {scenario.icon === 'home' && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                      </svg>
                    )}
                  </div>

                  <h3 class="text-2xl font-bold text-ez2fix-dark mb-4">{scenario.scenario}</h3>

                  <div class="space-y-3 mb-6">
                    <div class="flex items-start">
                      <span class="text-red-600 font-bold mr-2 mt-1">Problem:</span>
                      <span class="text-ez2fix-brown">{scenario.problem}</span>
                    </div>
                    <div class="flex items-start">
                      <span class="text-ez2fix-primary font-bold mr-2 mt-1">Solution:</span>
                      <span class="text-ez2fix-brown">{scenario.solution}</span>
                    </div>
                    <div class="flex items-start">
                      <span class="text-green-600 font-bold mr-2 mt-1">Result:</span>
                      <span class="text-ez2fix-dark font-semibold">{scenario.benefit}</span>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Why Professional Installation -->
    <section class="py-16 md:py-24 bg-gradient-to-br from-ez2fix-brown via-ez2fix-dark to-ez2fix-brown">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
              Why <span class="text-ez2fix-primary">Professional Installation</span> Matters
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-cream max-w-3xl mx-auto">
              DIY garage door installation risks safety, voids warranties, and often costs more to fix. Our licensed installers ensure perfect results.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {whyProfessional.map((reason) => (
              <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-300">
                <div class="text-4xl font-bold text-ez2fix-primary mb-3">{reason.stat}</div>
                <h3 class="text-xl font-bold text-white mb-3">{reason.title}</h3>
                <p class="text-ez2fix-cream leading-relaxed">{reason.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Installation Services with Alternating Layout -->
    <section class="py-16 md:py-24 bg-gradient-to-br from-ez2fix-cream to-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              Professional <span class="text-ez2fix-primary">Installation Services</span>
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              Comprehensive installation services for every need - from standard residential doors to custom designs with smart technology.
            </p>
          </div>

          <div class="space-y-16">
            {installationServices.map((service, index) => (
              <div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 items-center ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
                <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
                  <div class="relative">
                    <div class="absolute -inset-4 bg-gradient-to-r from-ez2fix-primary to-ez2fix-gold rounded-2xl opacity-20 blur-xl"></div>
                    <div class="relative bg-white rounded-2xl p-8 shadow-2xl border-2 border-ez2fix-primary/20">
                      <div class="inline-block px-4 py-1 bg-ez2fix-primary/10 text-ez2fix-primary font-bold rounded-full text-sm mb-4">
                        WARRANTY INCLUDED
                      </div>
                      <h3 class="text-3xl font-bold text-ez2fix-dark mb-3">{service.title}</h3>
                      <p class="text-2xl text-ez2fix-primary font-bold mb-4">{service.tagline}</p>
                      <p class="text-lg text-ez2fix-brown mb-6 leading-relaxed">{service.description}</p>

                      <div class="space-y-3">
                        {service.benefits.map((benefit) => (
                          <div class="flex items-center">
                            <svg class="w-6 h-6 text-ez2fix-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="text-ez2fix-dark font-medium">{benefit}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>

                <div class={index % 2 === 1 ? 'lg:col-start-1 lg:row-start-1' : ''}>
                  <div class="relative h-96 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="absolute inset-0 bg-gradient-to-br from-ez2fix-dark to-ez2fix-brown opacity-90"></div>
                    <div class="absolute inset-0 flex items-center justify-center">
                      {service.image === 'residential' && (
                        <svg class="w-32 h-32 text-ez2fix-primary opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                      )}
                      {service.image === 'insulated' && (
                        <svg class="w-32 h-32 text-ez2fix-primary opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                      )}
                      {service.image === 'custom' && (
                        <svg class="w-32 h-32 text-ez2fix-primary opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                        </svg>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Unique Installation Reviews -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-ez2fix-dark mb-4">
              Installation <span class="text-ez2fix-primary">Success Stories</span>
            </h2>
            <p class="text-lg md:text-xl text-ez2fix-brown max-w-3xl mx-auto">
              Real experiences from New Jersey homeowners who transformed their homes with professional garage door installation.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
            {installationReviews.map((review) => (
              <div class="bg-white rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border-2 border-ez2fix-primary/10">
                <div class="flex text-ez2fix-gold mb-4">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                      <path d="M12 .587l3.668 7.431 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                    </svg>
                  ))}
                </div>
                <p class="text-ez2fix-dark leading-relaxed mb-4 text-lg italic">"{review.text}"</p>
                <div class="border-t-2 border-ez2fix-cream pt-4">
                  <p class="font-bold text-ez2fix-dark text-lg">{review.author}</p>
                  <p class="text-sm text-ez2fix-brown">{review.location}</p>
                  <div class="mt-2 inline-block px-3 py-1 bg-ez2fix-primary/10 text-ez2fix-primary text-xs font-bold rounded-full">
                    {review.service}
                  </div>
                </div>
              </div>
            ))}
          </div>

          <div class="text-center">
            <a
              href="/reviews"
              class="inline-flex items-center px-8 py-4 bg-ez2fix-primary text-ez2fix-dark hover:bg-ez2fix-gold font-bold text-lg rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105"
