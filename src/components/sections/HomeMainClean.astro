---
import Card from '@/components/ui/Card.astro';
import ServiceCard from '@/components/ui/ServiceCard.astro';
import CTASectionClean from '@/components/ui/CTASectionClean.astro';
import { siteConfig } from '@/config/site';

const services = [
  {
    title: "24/7 Emergency Repair",
    description: "Door stuck? We're here 24/7 to fix it fast.",
    image: "https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/Garage%20Door%20Repair.webp",
    features: ["Available 24/7", "Same-Day Service", "All Brands", "Safety First"],
    warranty: "1-Year Warranty",
    badge: "24/7 AVAILABLE",
    href: "/services/emergency-garage-door-repair",
    popular: true
  },
  {
    title: "Spring Repair",
    description: "Safe spring replacement with proper tools and experience.",
    image: "https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/Garage%20Door%20Spring%20Repair.jpg",
    features: ["Safe Replacement", "Quality Springs", "Proper Balance", "Peace of Mind"],
    warranty: "10-Year Warranty",
    badge: "MOST COMMON",
    href: "/services/garage-door-spring-repair",
    popular: true
  },
  {
    title: "Smart Opener Installation",
    description: "Control your garage door from anywhere with smart technology.",
    image: "https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/Garage%20Door%20Opener%20Installation.webp",
    features: ["Smart Control", "Phone Alerts", "Backup Power", "Easy Setup"],
    warranty: "15-Year Warranty",
    badge: "SMART HOME",
    href: "/services/garage-door-opener-installation",
    popular: false
  },
  {
    title: "New Door Installation",
    description: "Boost home value with beautiful new garage doors.",
    image: "https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/Garage%20Door%20Installation.png",
    features: ["Boost Home Value", "Custom Styles", "Energy Savings", "Curb Appeal"],
    warranty: "15-Year Warranty",
    badge: "CURB APPEAL",
    href: "/services/new-garage-door-installation",
    popular: false
  },
  {
    title: "Commercial Service",
    description: "Fast commercial repairs to minimize downtime.",
    image: "https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/commercial-garage-door.jpg",
    features: ["Minimize Downtime", "Heavy-Duty", "Maintenance Plans", "Business Focus"],
    warranty: "Commercial Warranty",
    badge: "BUSINESS",
    href: "/services/commercial-garage-door-service",
    popular: false
  },
  {
    title: "General Repair",
    description: "Fix small problems before they become expensive ones.",
    image: "https://qjvikxuhqs1py0go.public.blob.vercel-storage.com/garage%20door%20repair.png",
    features: ["Prevent Problems", "Stop Noises", "Smooth Operation", "Peace of Mind"],
    warranty: "1-Year Warranty",
    badge: "ALL REPAIRS",
    href: "/services/general-garage-door-repair",
    popular: false
  }
];

const whyChooseUs = [
  {
    title: "Local Neighbors",
    description: "15+ years serving Northern NJ families.",
    stat: "15+ Years",
    color: "primary"
  },
  {
    title: "Proven Trust", 
    description: "10,000+ families trust our service.",
    stat: "10,000+ Families",
    color: "gold"
  },
  {
    title: "Our Guarantee",
    description: "We stand behind our work completely.",
    stat: "100% Backed",
    color: "brown"
  }
];

const processSteps = [
  { step: "1", title: "Call Us", description: "Tell us what's wrong" },
  { step: "2", title: "We Assess", description: "Honest evaluation" },
  { step: "3", title: "Fair Price", description: "Upfront, no surprises" },
  { step: "4", title: "Fix & Guarantee", description: "Quality work, backed" }
];
---

<section class="space-section-md bg-gradient-to-br from-ez2fix-dark via-ez2fix-brown/20 to-ez2fix-dark">
  <div class="container-responsive">
      
      <!-- Services Header -->
      <div class="section-header-responsive animate-on-scroll">
        <h2 class="section-title-responsive text-ez2fix-cream">
          Professional <span class="text-ez2fix-primary">Garage Door</span> Services
        </h2>
        <p class="section-subtitle-responsive text-ez2fix-gold/90">
          Fast, reliable service when you need it most. <span class="text-ez2fix-primary font-bold">Your neighbors trust us</span> - you can too.
        </p>
        
        <!-- Enhanced Services Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8 max-w-7xl mx-auto">
          {services.map((service, index) => (
            <div class="animate-on-scroll" style={`animation-delay: ${index * 100}ms`}>
              <ServiceCard
                title={service.title}
                description={service.description}
                image={service.image}
                features={service.features}
                warranty={service.warranty}
                badge={service.badge}
                href={service.href}
                popular={service.popular}
                theme="dark"
              />
            </div>
          ))}
        </div>
        
        <!-- Enhanced View All Services CTA -->
        <div class="text-center mt-12 animate-on-scroll">
          <div class="inline-block p-1 rounded-xl bg-gradient-to-r from-ez2fix-primary to-ez2fix-gold shadow-premium">
            <a href="/services" class="cta-responsive bg-ez2fix-cream text-ez2fix-primary hover:bg-ez2fix-primary hover:text-ez2fix-dark btn-premium hover-lift inline-flex items-center justify-center shadow-lg transition-all duration-300">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5m3 0h4"/>
              </svg>
              View All Services
              <svg class="h-5 w-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
          <p class="text-body-small text-ez2fix-gold/80 mt-3 max-w-md mx-auto">
            Explore our complete range of professional garage door services
          </p>
        </div>
      </div>
  </div>
</section>

<!-- Why Choose Us Section -->
<section class="space-section-md gradient-dark">
  <div class="container-responsive">
      
      <div class="section-header-responsive">
        <h2 class="section-title-responsive text-ez2fix-cream">
          Why <span class="text-ez2fix-primary">Choose</span> Ez2Fix?
        </h2>
        <p class="section-subtitle-responsive text-ez2fix-gold">
          Local expertise you can trust. <span class="text-ez2fix-primary font-bold">We're your neighbors</span>.
        </p>
        
        <div class="grid-responsive-features gap-responsive mb-8 md:mb-12">
          {whyChooseUs.map((reason, index) => (
            <Card class={`card-responsive-large shadow-premium border-2 text-center h-full bg-ez2fix-cream ${
              reason.color === 'primary' ? 'border-ez2fix-primary' : 
              reason.color === 'gold' ? 'border-ez2fix-gold' : 'border-ez2fix-brown'
            }`}>
              <div class={`text-display-3 font-bold mb-3 md:mb-4 ${
                reason.color === 'primary' ? 'text-ez2fix-primary' : 
                reason.color === 'gold' ? 'text-ez2fix-gold' : 'text-ez2fix-brown'
              }`}>
                {reason.stat}
              </div>
              <h3 class="text-heading-1 text-ez2fix-dark mb-3 md:mb-4">{reason.title}</h3>
              <p class="text-body-large text-ez2fix-brown">{reason.description}</p>
            </Card>
          ))}
        </div>
      </div>

      <!-- Simple Process -->
      <div class="text-center">
        <h3 class="text-display-3 text-ez2fix-cream mb-6 sm:mb-8">
          Simple <span class="text-ez2fix-primary">4-Step</span> Process
        </h3>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-responsive max-w-5xl mx-auto">
          {processSteps.map((step, index) => (
            <div class="text-center">
              <div class={`w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center ${
                index === 0 ? 'bg-ez2fix-primary' : 
                index === 1 ? 'bg-ez2fix-gold' : 
                index === 2 ? 'bg-ez2fix-brown' : 'bg-ez2fix-primary'
              }`}>
                <span class={`text-heading-1 font-bold ${index === 1 ? 'text-ez2fix-dark' : 'text-ez2fix-cream'}`}>
                  {step.step}
                </span>
              </div>
              <h4 class="text-heading-2 text-ez2fix-cream mb-2">{step.title}</h4>
              <p class="text-body-base text-ez2fix-gold">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
  </div>
</section>

<!-- Final CTA -->
<CTASectionClean 
  title="Ready to Stop Worrying About Your Garage Door?"
  subtitle="One call and you can breathe easy again. We'll handle everything so you can get back to the things that actually matter in your life."
  primaryCTA={{
    text: `Call ${siteConfig.business.phone}`,
    href: siteConfig.links.phone,
    icon: "phone"
  }}
  secondaryCTA={{
    text: "Get Free Estimate",
    href: "/booking",
    icon: "calendar"
  }}
  theme="dark"
/>