---
export interface Props {
  title: string;
  subtitle?: string;
  theme?: 'light' | 'dark';
  align?: 'left' | 'center' | 'right';
  size?: 'small' | 'medium' | 'large';
}

const {
  title,
  subtitle,
  theme = 'light',
  align = 'center',
  size = 'medium'
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};

const sizeClasses = {
  small: 'text-2xl md:text-3xl',
  medium: 'text-3xl md:text-4xl lg:text-5xl',
  large: 'text-4xl md:text-5xl lg:text-6xl'
};

const textClass = theme === 'dark' ? 'text-ez2fix-cream' : 'text-ez2fix-dark';
const subtitleClass = theme === 'dark' ? 'text-ez2fix-gold' : 'text-ez2fix-brown';
---

<div class={`mb-12 ${alignClasses[align]}`}>
  <h2 class={`${sizeClasses[size]} font-bold mb-6 ${textClass}`} set:html={title} />
  {subtitle && (
    <p class={`text-xl max-w-3xl leading-relaxed ${subtitleClass} ${align === 'center' ? 'mx-auto' : ''}`} set:html={subtitle} />
  )}
</div>