    // Idle-time scheduler for non-critical scripts
    class IdleScheduler {
      constructor() {
        this.tasks = [];
        this.isScheduled = false;
      }
      
      schedule(task, priority = 'low') {
        this.tasks.push({ task, priority, scheduled: Date.now() });
        if (!this.isScheduled) {
          this.isScheduled = true;
          this.runWhenIdle();
        }
      }
      
      runWhenIdle() {
        if ('requestIdleCallback' in window) {
          requestIdleCallback((deadline) => {
            this.processTasks(deadline);
          }, { timeout: 2000 });
        } else {
          // Fallback for Safari
          setTimeout(() => {
            this.processTasks({ timeRemaining: () => 16 });
          }, 100);
        }
      }
      
      processTasks(deadline) {
        this.isScheduled = false;
        
        // Process high priority tasks first
        const highPriorityTasks = this.tasks.filter(t => t.priority === 'high');
        const lowPriorityTasks = this.tasks.filter(t => t.priority === 'low');
        
        let tasksToRun = [...highPriorityTasks, ...lowPriorityTasks];
        
        while (tasksToRun.length > 0 && deadline.timeRemaining() > 5) {
          const { task } = tasksToRun.shift();
          try {
            task();
          } catch (e) {
            console.warn('IdleScheduler task failed:', e);
          }
          this.tasks = this.tasks.filter(t => t.task !== task);
        }
        
        // If there are remaining tasks, reschedule
        if (this.tasks.length > 0) {
          this.runWhenIdle();
        }
      }
    }
    
    const scheduler = new IdleScheduler();
    
